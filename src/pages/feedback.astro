---
import SiteLayout from '@layouts/SiteLayout.astro';
import PageHero from '@components/PageHero.astro';
import ContactSection from '@components/ContactSection.astro';
import Icon from '@components/Icon.astro';

const metadata = {
  title: 'Feedback & Complaints - Team Care Support',
  description: 'Share feedback, compliments, or raise a complaint about our services. We operate openly and transparently.',
  schema: {
    '@context': 'https://schema.org',
    '@type': 'WebPage',
    name: 'Feedback & Complaints',
    description: 'Share your feedback or raise a complaint about our services.'
  }
};
---
<SiteLayout metadata={metadata}>
  <PageHero
    heading="Feedback & Complaints"
    subheading="We operate openly and transparently. Your feedback helps us improve and deliver better services."
    primaryCtaText="Share Feedback"
    primaryCtaHref="#feedback-form"
  />

  <!-- We Welcome Your Feedback - Visual split layout -->
  <section class="py-24 bg-background overflow-hidden">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-16 items-center">
        <div>
          <p class="text-xs font-semibold uppercase tracking-[0.2em] text-primary mb-4">Your Voice</p>
          <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-foreground mb-6 tracking-tight">We Welcome Your Feedback</h2>
          <div class="space-y-4 text-lg text-muted-foreground leading-relaxed">
            <p>
              Team Care encourages both compliments and complaints. We operate in an open, transparent manner and believe constant feedback is the only way to improve our services.
            </p>
            <p>
              <strong class="text-foreground">Both complaints and compliments are important.</strong> Complaints help us identify issues and make improvements. Compliments help us recognise what works and celebrate good practice.
            </p>
          </div>
          
          {/* Quick stats */}
          <div class="mt-8 flex flex-wrap gap-6">
            <div class="flex items-center gap-3">
              <div class="h-10 w-10 rounded-lg bg-primary/10 flex items-center justify-center text-primary">
                <Icon name="tabler:clock" class="w-5 h-5" />
              </div>
              <div>
                <p class="text-sm font-semibold text-foreground">5 Day Response</p>
                <p class="text-xs text-muted-foreground">Acknowledgement time</p>
              </div>
            </div>
            <div class="flex items-center gap-3">
              <div class="h-10 w-10 rounded-lg bg-accent/10 flex items-center justify-center text-accent-foreground">
                <Icon name="tabler:shield-check" class="w-5 h-5" />
              </div>
              <div>
                <p class="text-sm font-semibold text-foreground">CQC Aligned</p>
                <p class="text-xs text-muted-foreground">Regulatory compliance</p>
              </div>
            </div>
          </div>
        </div>

        {/* Image with testimonial */}
        <div class="relative">
          <div class="relative aspect-square rounded-2xl overflow-hidden shadow-2xl shadow-primary/10">
            <img 
              src="https://images.unsplash.com/photo-1573497019940-1c28c88b4f3e?auto=format&fit=crop&w=800&q=80" 
              alt="Team member listening to feedback"
              class="w-full h-full object-cover"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent"></div>
            
            {/* Quote overlay */}
            <div class="absolute bottom-6 left-6 right-6">
              <div class="bg-white/95 backdrop-blur-sm rounded-xl p-5 shadow-lg border border-white/20">
                <div class="flex gap-1 mb-2">
                  {[1,2,3,4,5].map(() => (
                    <Icon name="tabler:star" class="w-4 h-4 text-amber-400 fill-current" />
                  ))}
                </div>
                <p class="text-foreground text-sm font-medium mb-2">
                  "The team genuinely listened to our concerns and made real changes."
                </p>
                <p class="text-xs text-muted-foreground">— Family Member</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- How to Make a Complaint - Visual timeline -->
  <section class="py-24 bg-background">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <p class="text-xs font-semibold uppercase tracking-[0.2em] text-primary mb-4">Process</p>
        <h2 class="text-3xl sm:text-4xl font-bold text-foreground mb-4 tracking-tight">How to Make a Complaint</h2>
        <p class="text-lg text-muted-foreground">
          We take all complaints seriously and follow a clear, transparent process.
        </p>
      </div>

      <div class="grid lg:grid-cols-2 gap-16 items-start">
        {/* Timeline side */}
        <div class="relative">
          {/* Timeline line */}
          <div class="absolute left-6 top-8 bottom-8 w-px bg-gradient-to-b from-primary via-accent to-primary/30 hidden sm:block -z-10"></div>
          
          <div class="space-y-6">
            {[
              { number: '1', title: 'Contact Us Directly', description: 'Speak to your care worker, supervisor, or the Registered Manager.' },
              { number: '2', title: 'Acknowledgement', description: 'We will acknowledge your complaint and begin investigation.' },
              { number: '3', title: 'Investigation', description: 'The complaint is fully investigated with relevant bodies informed.' },
              { number: '4', title: 'Response', description: 'You receive a response within agreed timescales.' },
              { number: '5', title: 'Escalation', description: 'If not satisfied, you can escalate to external bodies.' }
            ].map((step) => (
              <div class="relative flex gap-6">
                <div class="flex-shrink-0">
                  <div class="flex items-center justify-center w-12 h-12 rounded-full bg-background text-primary ring-1 ring-primary/30 font-bold text-lg shadow-sm">
                    {step.number}
                  </div>
                </div>
                <div class="flex-1 pt-2">
                  <h3 class="text-lg font-semibold text-foreground mb-1">{step.title}</h3>
                  <p class="text-sm text-muted-foreground leading-relaxed">{step.description}</p>
                </div>
              </div>
            ))}
          </div>
        </div>
        
        {/* Contact card side */}
        <div class="lg:sticky lg:top-24">
          <div class="relative p-8 rounded-2xl bg-card border border-border/70 overflow-hidden">
            <div class="absolute top-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-primary/30 to-transparent"></div>
            
            <div class="inline-flex h-12 w-12 items-center justify-center rounded-xl bg-primary/10 text-primary ring-1 ring-primary/20 mb-6">
              <Icon name="tabler:message-report" class="w-6 h-6" />
            </div>
            
            <h3 class="text-xl font-semibold text-foreground mb-6">Contact for Complaints</h3>
            <div class="space-y-4">
              <div class="flex items-start gap-3">
                <Icon name="tabler:user" class="w-5 h-5 text-primary flex-shrink-0 mt-0.5" />
                <div>
                  <p class="text-sm font-medium text-foreground">Registered Manager</p>
                  <p class="text-sm text-muted-foreground">Kerry McCulloch</p>
                </div>
              </div>
              <div class="flex items-start gap-3">
                <Icon name="tabler:map-pin" class="w-5 h-5 text-primary flex-shrink-0 mt-0.5" />
                <p class="text-sm text-muted-foreground">Foxhall Lodge, Foxhall Rd, Forest Fields, Nottingham NG7 6LH</p>
              </div>
              <div class="flex items-start gap-3">
                <Icon name="tabler:mail" class="w-5 h-5 text-primary flex-shrink-0 mt-0.5" />
                <a href="mailto:kerry@teamcarecompliance.org.uk" class="text-sm text-primary hover:underline">kerry@teamcarecompliance.org.uk</a>
              </div>
              <div class="flex items-start gap-3">
                <Icon name="tabler:phone" class="w-5 h-5 text-primary flex-shrink-0 mt-0.5" />
                <a href="tel:01158450220" class="text-sm text-primary hover:underline">0115 845 0220</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- External Bodies - Clean card layout -->
  <section class="py-24 bg-background">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <p class="text-xs font-semibold uppercase tracking-[0.2em] text-primary mb-4">Escalation</p>
        <h2 class="text-3xl sm:text-4xl font-bold text-foreground mb-4 tracking-tight">External Bodies</h2>
        <p class="text-lg text-muted-foreground">
          If you are not satisfied with our response, you can contact:
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-6 max-w-4xl mx-auto">
        <div class="group relative p-8 rounded-xl bg-card border border-border/70 hover:border-primary/30 transition-all duration-500 hover:-translate-y-1">
          <div class="absolute -inset-px bg-gradient-to-br from-primary/5 to-transparent rounded-xl opacity-0 group-hover:opacity-100 transition-opacity duration-500 -z-10 blur-sm"></div>
          <div class="inline-flex h-12 w-12 items-center justify-center rounded-xl bg-primary/10 text-primary ring-1 ring-primary/20 mb-5">
            <Icon name="tabler:building" class="w-6 h-6" />
          </div>
          <h3 class="text-lg font-semibold text-foreground mb-4">Local Government Ombudsman (LGO)</h3>
          <div class="space-y-2 text-sm text-muted-foreground">
            <p><strong class="text-foreground">Email:</strong> <a href="mailto:advice@lgo.org.uk" class="text-primary hover:underline">advice@lgo.org.uk</a></p>
            <p><strong class="text-foreground">Tel:</strong> <a href="tel:03000610614" class="text-primary hover:underline">0300 061 0614</a></p>
            <p><strong class="text-foreground">Website:</strong> <a href="https://www.lgo.org.uk" target="_blank" rel="noopener noreferrer" class="text-primary hover:underline">www.lgo.org.uk</a></p>
          </div>
        </div>

        <div class="group relative p-8 rounded-xl bg-card border border-border/70 hover:border-primary/30 transition-all duration-500 hover:-translate-y-1">
          <div class="absolute -inset-px bg-gradient-to-br from-primary/5 to-transparent rounded-xl opacity-0 group-hover:opacity-100 transition-opacity duration-500 -z-10 blur-sm"></div>
          <div class="inline-flex h-12 w-12 items-center justify-center rounded-xl bg-primary/10 text-primary ring-1 ring-primary/20 mb-5">
            <Icon name="tabler:shield-check" class="w-6 h-6" />
          </div>
          <h3 class="text-lg font-semibold text-foreground mb-4">Care Quality Commission (CQC)</h3>
          <div class="space-y-2 text-sm text-muted-foreground">
            <p><strong class="text-foreground">Address:</strong> Citygate, Gallowgate, Newcastle upon Tyne, NE1 4PA</p>
            <p><strong class="text-foreground">Email:</strong> <a href="mailto:enquiries@cqc.org.uk" class="text-primary hover:underline">enquiries@cqc.org.uk</a></p>
            <p><strong class="text-foreground">Tel:</strong> <a href="tel:03000616161" class="text-primary hover:underline">03000 616161</a></p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Feedback Form - Premium form section -->
  <section id="feedback-form" class="py-24 bg-background">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-16 items-start">
        {/* Form side */}
        <div>
          <div class="text-center lg:text-left mb-10">
            <div class="inline-flex items-center justify-center w-14 h-14 rounded-2xl bg-primary/10 text-primary ring-1 ring-primary/20 mb-6">
              <Icon name="tabler:message-2" class="w-7 h-7" />
            </div>
            <p class="text-xs font-semibold uppercase tracking-[0.2em] text-primary mb-4">Share Your Thoughts</p>
            <h2 class="text-3xl sm:text-4xl font-bold text-foreground mb-4 tracking-tight">Share Your Feedback</h2>
            <p class="text-lg text-muted-foreground">
              We aim to acknowledge all feedback within 5 working days.
            </p>
          </div>

          <form class="relative bg-card border border-border/70 rounded-2xl p-8 shadow-xl space-y-5">
            <div class="absolute top-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-primary/30 to-transparent"></div>
            
            <div class="grid sm:grid-cols-2 gap-5">
              <div>
                <label for="name" class="block text-sm font-medium text-foreground mb-2">Name</label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  class="w-full px-4 py-3 bg-muted/30 border border-border/60 rounded-xl focus:outline-none focus:ring-2 focus:ring-primary/50 focus:border-primary transition-all"
                  placeholder="Your name"
                />
              </div>
              <div>
                <label for="email" class="block text-sm font-medium text-foreground mb-2">Email</label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  class="w-full px-4 py-3 bg-muted/30 border border-border/60 rounded-xl focus:outline-none focus:ring-2 focus:ring-primary/50 focus:border-primary transition-all"
                  placeholder="your.email@example.com"
                />
              </div>
            </div>

            <div>
              <label for="feedback-type" class="block text-sm font-medium text-foreground mb-2">Feedback Type</label>
              <select
                id="feedback-type"
                name="feedback-type"
                required
                class="w-full px-4 py-3 bg-muted/30 border border-border/60 rounded-xl focus:outline-none focus:ring-2 focus:ring-primary/50 focus:border-primary transition-all appearance-none"
              >
                <option value="">Select type...</option>
                <option value="compliment">Compliment</option>
                <option value="complaint">Complaint</option>
                <option value="suggestion">Suggestion</option>
              </select>
            </div>

            <div>
              <label for="message" class="block text-sm font-medium text-foreground mb-2">Message</label>
              <textarea
                id="message"
                name="message"
                rows="5"
                required
                class="w-full px-4 py-3 bg-muted/30 border border-border/60 rounded-xl focus:outline-none focus:ring-2 focus:ring-primary/50 focus:border-primary transition-all resize-none"
                placeholder="Please share your feedback..."
              ></textarea>
            </div>

            <button
              type="submit"
              class="group w-full bg-primary hover:bg-primary/90 text-primary-foreground font-semibold py-4 px-6 rounded-xl shadow-lg shadow-primary/20 hover:shadow-xl hover:shadow-primary/30 transition-all flex items-center justify-center gap-2"
            >
              <Icon name="tabler:send" class="w-5 h-5" />
              Submit Feedback
              <Icon name="tabler:arrow-right" class="w-5 h-5 transform group-hover:translate-x-1 transition-transform" />
            </button>
          </form>
        </div>
        
        {/* Image side */}
        <div class="relative lg:sticky lg:top-24 hidden lg:block">
          <div class="relative aspect-[4/3] rounded-2xl overflow-hidden shadow-2xl shadow-primary/10">
            <img 
              src="https://images.unsplash.com/photo-1573497019940-1c28c88b4f3e?auto=format&fit=crop&w=800&q=80" 
              alt="Care team ready to listen"
              class="w-full h-full object-cover"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/50 via-transparent to-transparent"></div>
            
            {/* Overlay content */}
            <div class="absolute bottom-8 left-8 right-8">
              <div class="bg-white/95 backdrop-blur-sm rounded-xl p-6 shadow-lg border border-white/20">
                <p class="text-foreground font-medium text-sm mb-2">
                  "Every piece of feedback helps us improve our services for everyone."
                </p>
                <p class="text-xs text-muted-foreground">— Quality Assurance Team</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <ContactSection
    heading="Get in Touch"
    intro="Prefer to speak with us directly? We're here to listen."
    phoneLabel="0115 845 0220"
    phoneHref="tel:01158450220"
    address="Nottingham, Nottinghamshire"
  />
</SiteLayout>

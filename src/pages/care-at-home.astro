---
import SiteLayout from '@layouts/SiteLayout.astro';
import PageHero from '@components/PageHero.astro';
import ContactSection from '@components/ContactSection.astro';
import ContentCard from '@components/ContentCard.astro';
import Icon from '@components/Icon.astro';

const metadata = {
  title: 'Care at Home - Team Care Support',
  description: 'Professional domiciliary care services across Nottinghamshire. Personal care, medication support, companionship, respite, live-in care, and crisis management.',
  schema: {
    '@context': 'https://schema.org',
    '@type': 'WebPage',
    name: 'Care at Home Services',
    description: 'Professional domiciliary care services across Nottinghamshire.'
  }
};

const services = [
  {
    icon: 'tabler:heart-handshake',
    title: 'Personal Care',
    description: 'Assistance with washing, dressing, grooming, and maintaining dignity in your daily routine.',
    featured: true
  },
  {
    icon: 'tabler:pill',
    title: 'Medication Support',
    description: 'Safe administration, prompts, and management to ensure you take the right medication at the right time.'
  },
  {
    icon: 'tabler:users',
    title: 'Companionship Care',
    description: 'Social interaction, reducing loneliness, and providing emotional support.'
  },
  {
    icon: 'tabler:clock',
    title: 'Respite Care',
    description: 'Short-term relief for family carers, giving you peace of mind and time to recharge.'
  },
  {
    icon: 'tabler:home-heart',
    title: 'Live-In Care',
    description: '24-hour in-home care for dementia and long-term conditions, providing round-the-clock support.'
  },
  {
    icon: 'tabler:alert-circle',
    title: 'Crisis Management',
    description: 'Fast, effective interventions during increased emotional or mental health need.'
  }
];

const differentiators = [
  {
    icon: 'tabler:urgent',
    title: 'Urgent Support',
    description: 'We aim to provide urgent care within 24 hours of your initial call.'
  },
  {
    icon: 'tabler:school',
    title: 'Fully Trained Carers',
    description: 'No agency staff, no untrained workers. Every care worker is fully trained and directly employed.'
  },
  {
    icon: 'tabler:star',
    title: 'High-Quality Care',
    description: 'Comprehensive, person-centred care even in urgent situations.'
  },
  {
    icon: 'tabler:puzzle',
    title: 'Matched by Interest',
    description: 'Care workers selected based on personality fit and shared interests, not just availability.'
  },
  {
    icon: 'tabler:hospital',
    title: 'Preventing Hospital Admissions',
    description: 'Personalised care and crisis management at home to avoid unnecessary hospital stays.'
  },
  {
    icon: 'tabler:arrow-back',
    title: 'Post-Discharge Support',
    description: 'Smooth transition from hospital back to independent living at home.'
  }
];

const deliverySteps = [
  {
    number: '1',
    title: 'Initial Assessment',
    description: 'Our Care Manager meets you, completes a full needs and risk assessment to understand your requirements.'
  },
  {
    number: '2',
    title: 'Getting to Know You',
    description: 'We learn about your likes, dislikes, hobbies, and interests to match you with the right care worker.'
  },
  {
    number: '3',
    title: 'Care Worker Matching',
    description: 'Our Manager reviews care workers to select the best personality and skills match for you.'
  },
  {
    number: '4',
    title: 'Ongoing Review',
    description: 'Your care plan is reviewed after 3 months initially, then at least every 6 months to ensure it meets your needs.'
  },
  {
    number: '5',
    title: 'Family Involvement',
    description: 'Changes to your care are agreed with you and relevant family members, keeping everyone informed.'
  }
];

const specialisms = [
  { icon: 'tabler:users', text: 'Adults over 65 / under 65' },
  { icon: 'tabler:brain', text: 'Dementia care' },
  { icon: 'tabler:heart', text: 'Learning disabilities' },
  { icon: 'tabler:mood-smile', text: 'Mental health conditions' },
  { icon: 'tabler:accessible', text: 'Physical disabilities' },
  { icon: 'tabler:eye-off', text: 'Sensory impairments' },
  { icon: 'tabler:bottle', text: 'Substance misuse support' },
  { icon: 'tabler:flower', text: 'Palliative and end-of-life care' }
];
---
<SiteLayout metadata={metadata}>
  <PageHero
    heading="Compassionate Care at Home"
    subheading="Professional, person-centred domiciliary care that helps you stay independent in your own home. Tailored support, fully trained carers, no agency staff."
    bgClass="bg-[#F2A3A0]"
    primaryCtaText="Make a Referral"
    primaryCtaHref="/referral"
    secondaryCtaText="Call Us"
    secondaryCtaHref="tel:01158450220"
  />

  <!-- Our Care Services - Visual with images -->
  <section class="py-24 bg-background overflow-hidden">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <p class="text-xs font-semibold uppercase tracking-[0.2em] text-primary mb-4">Services</p>
        <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-foreground mb-4 tracking-tight">Our Care Services</h2>
        <p class="text-lg text-muted-foreground max-w-3xl mx-auto">
          Professional domiciliary care tailored to your needs — enabling you to stay in your own home with dignity and independence.
        </p>
      </div>

      {/* Services bento grid with images */}
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-5">
        {services.map((service, index) => (
          index === 0 ? (
            <!-- Featured card: horizontal layout filling the space -->
            <div class="group relative rounded-2xl overflow-hidden bg-card border border-border/70 hover:border-primary/30 transition-all duration-500 hover:-translate-y-2 md:col-span-2 lg:col-span-2 lg:row-span-2 min-h-[400px] lg:min-h-[480px]">
              <!-- Background image with gradient overlay -->
              <img 
                src="https://images.unsplash.com/photo-1576765608866-5b51f8d6eaa4?auto=format&fit=crop&w=1200&q=80"
                alt={service.title}
                class="absolute inset-0 w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-700"
              />
              <div class="absolute inset-0 bg-gradient-to-r from-card via-card/80 to-transparent"></div>
              <div class="absolute inset-0 bg-gradient-to-t from-card/90 via-transparent to-transparent"></div>
              
              <!-- Content positioned over image -->
              <div class="relative h-full flex flex-col justify-end p-8 lg:p-10">
                <!-- Icon badge -->
                <div class="mb-6">
                  <div class="inline-flex h-14 w-14 items-center justify-center rounded-xl bg-white/95 text-primary shadow-xl ring-1 ring-primary/20 group-hover:bg-primary group-hover:text-primary-foreground transition-all duration-300">
                    <Icon name={service.icon} class="w-7 h-7" />
                  </div>
                </div>
                
                <h3 class="text-2xl lg:text-3xl font-bold text-foreground mb-4 group-hover:text-primary transition-colors">
                  {service.title}
                </h3>
                <p class="text-base lg:text-lg text-muted-foreground leading-relaxed max-w-md">
                  {service.description}
                </p>
                
                <!-- Featured badge -->
                <div class="mt-6 inline-flex items-center gap-2 px-4 py-2 rounded-full bg-primary/10 text-primary text-sm font-medium ring-1 ring-primary/20 w-fit">
                  <Icon name="tabler:star" class="w-4 h-4" />
                  <span>Core Service</span>
                </div>
              </div>
            </div>
          ) : (
            <!-- Standard cards: image above content -->
            <div class="group relative rounded-2xl overflow-hidden bg-card border border-border/70 hover:border-primary/30 transition-all duration-500 hover:-translate-y-2">
              <!-- Image area -->
              <div class="relative overflow-hidden h-48">
                <img 
                  src={[
                    "https://images.unsplash.com/photo-1576765608866-5b51f8d6eaa4?auto=format&fit=crop&w=800&q=80",
                    "https://images.unsplash.com/photo-1585435557343-3b092031a831?auto=format&fit=crop&w=600&q=80",
                    "https://images.unsplash.com/photo-1576765608866-5b51f8d6eaa4?auto=format&fit=crop&w=600&q=80",
                    "https://images.unsplash.com/photo-1581056771107-24ca5f033842?auto=format&fit=crop&w=600&q=80",
                    "https://images.unsplash.com/photo-1559839734-2b71ea197ec2?auto=format&fit=crop&w=600&q=80",
                    "https://images.unsplash.com/photo-1576091160399-112ba8d25d1d?auto=format&fit=crop&w=600&q=80"
                  ][index]}
                  alt={service.title}
                  class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-card via-card/20 to-transparent"></div>
                
                <!-- Icon badge -->
                <div class="absolute top-4 left-4">
                  <div class="inline-flex h-10 w-10 items-center justify-center rounded-xl bg-white/95 text-primary shadow-lg ring-1 ring-primary/20 group-hover:bg-primary group-hover:text-primary-foreground transition-all duration-300">
                    <Icon name={service.icon} class="w-5 h-5" />
                  </div>
                </div>
              </div>
              
              <!-- Content -->
              <div class="p-6">
                <h3 class="text-lg font-semibold text-foreground mb-2 group-hover:text-primary transition-colors">
                  {service.title}
                </h3>
                <p class="text-sm text-muted-foreground leading-relaxed">
                  {service.description}
                </p>
              </div>
            </div>
          )
        ))}
      </div>
    </div>
  </section>

  <!-- What Makes Us Different - Split layout with image -->
  <section class="py-24 bg-muted/30 overflow-hidden">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-16 items-center">
        {/* Left: Differentiators grid */}
        <div>
          <p class="text-xs font-semibold uppercase tracking-[0.2em] text-primary mb-4">Why Us</p>
          <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-foreground mb-6 tracking-tight">What Makes Us Different</h2>
          <p class="text-lg text-muted-foreground leading-relaxed mb-8">
            We go beyond standard care provision to deliver truly person-centred support that makes a real difference to your life.
          </p>
          
          <div class="grid sm:grid-cols-2 gap-4">
            {differentiators.slice(0, 4).map((diff) => (
              <div class="group flex gap-4 p-4 rounded-xl bg-card border border-border/60 hover:border-primary/30 transition-all duration-300">
                <div class="inline-flex h-10 w-10 items-center justify-center rounded-lg bg-primary/10 text-primary ring-1 ring-primary/20 flex-shrink-0 group-hover:bg-primary group-hover:text-primary-foreground transition-all duration-300">
                  <Icon name={diff.icon} class="w-5 h-5" />
                </div>
                <div>
                  <h3 class="text-sm font-semibold text-foreground mb-1 group-hover:text-primary transition-colors">{diff.title}</h3>
                  <p class="text-xs text-muted-foreground leading-relaxed">{diff.description}</p>
                </div>
              </div>
            ))}
          </div>
        </div>
        
        {/* Right: Image with testimonial */}
        <div class="relative">
          <div class="relative aspect-[4/3] rounded-2xl overflow-hidden shadow-2xl shadow-primary/10">
            <img 
              src="https://images.unsplash.com/photo-1581594693702-fbdc51b2763b?auto=format&fit=crop&w=900&q=80" 
              alt="Care at home service"
              class="w-full h-full object-cover"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/50 via-transparent to-transparent"></div>
            
            {/* Testimonial overlay */}
            <div class="absolute bottom-6 left-6 right-6">
              <div class="bg-white/95 backdrop-blur-sm rounded-xl p-5 shadow-lg border border-white/20">
                <p class="text-foreground text-sm font-medium mb-2">
                  "The carers feel like family now. Mum looks forward to their visits every day."
                </p>
                <p class="text-xs text-muted-foreground">— Family Member, Nottingham</p>
              </div>
            </div>
          </div>
          
          {/* Floating badge */}
          <div class="absolute -top-4 -left-4 bg-card border border-border/70 rounded-xl p-4 shadow-xl">
            <div class="flex items-center gap-3">
              <div class="h-10 w-10 rounded-full bg-primary/10 flex items-center justify-center text-primary">
                <Icon name="tabler:urgent" class="w-5 h-5" />
              </div>
              <div>
                <p class="text-sm font-semibold text-foreground">24hr</p>
                <p class="text-xs text-muted-foreground">Urgent Response</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- How Care is Delivered -->
  <section class="py-24 bg-muted/30 overflow-hidden">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <p class="text-xs font-semibold uppercase tracking-[0.2em] text-primary mb-4">Process</p>
        <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-foreground mb-4 tracking-tight">How Care is Delivered</h2>
        <p class="text-lg text-muted-foreground max-w-3xl mx-auto">
          Our systematic approach ensures you receive the right care from the right person, with ongoing support and review.
        </p>
      </div>

      <!-- Alternating card layout -->
      <div class="space-y-6 lg:space-y-8">
        {deliverySteps.map((step, index) => (
          <div class={`group relative ${index % 2 === 1 ? 'lg:pl-16' : 'lg:pr-16'}`}>
            <div class={`relative flex flex-col lg:flex-row gap-6 lg:gap-10 p-6 lg:p-8 rounded-2xl bg-card border border-border/70 hover:border-primary/30 transition-all duration-500 ${index % 2 === 1 ? 'lg:flex-row-reverse' : ''}`}>
              <!-- Step number badge -->
              <div class="flex-shrink-0 flex lg:flex-col items-start lg:items-center gap-4 lg:gap-3">
                <div class="flex items-center justify-center w-14 h-14 lg:w-16 lg:h-16 rounded-2xl bg-primary text-primary-foreground font-bold text-xl lg:text-2xl shadow-lg shadow-primary/30 group-hover:scale-110 transition-transform duration-300">
                  {step.number}
                </div>
                <div class="hidden lg:block w-px h-full bg-gradient-to-b from-primary/50 to-transparent min-h-[60px]"></div>
              </div>
              
              <!-- Content -->
              <div class="flex-1">
                <h3 class="text-xl lg:text-2xl font-bold text-foreground mb-3 group-hover:text-primary transition-colors">{step.title}</h3>
                <p class="text-base text-muted-foreground leading-relaxed">{step.description}</p>
              </div>
              
              <!-- Decorative corner -->
              <div class="absolute top-0 right-0 w-24 h-24 overflow-hidden rounded-tr-2xl">
                <div class="absolute -top-12 -right-12 w-24 h-24 bg-gradient-to-br from-primary/10 to-transparent rotate-45 group-hover:from-primary/20 transition-colors duration-300"></div>
              </div>
            </div>
          </div>
        ))}
      </div>
      
      <!-- Bottom CTA -->
      <div class="mt-12 text-center">
        <p class="text-muted-foreground mb-4">Ready to start your care journey?</p>
        <a href="/referral" class="inline-flex items-center gap-2 px-6 py-3 bg-primary text-primary-foreground font-semibold rounded-xl hover:bg-primary/90 transition-colors shadow-lg shadow-primary/20">
          <span>Make a Referral</span>
          <Icon name="tabler:arrow-right" class="w-5 h-5" />
        </a>
      </div>
    </div>
  </section>

  <!-- Specialist Support -->
  <section class="py-24 bg-background overflow-hidden">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="relative">
        <!-- Background decoration -->
        <div class="absolute -top-24 -right-24 w-96 h-96 bg-gradient-to-br from-primary/5 to-accent/5 rounded-full blur-3xl"></div>
        <div class="absolute -bottom-24 -left-24 w-96 h-96 bg-gradient-to-tr from-accent/5 to-primary/5 rounded-full blur-3xl"></div>
        
        <div class="relative grid lg:grid-cols-12 gap-12 lg:gap-16">
          <!-- Left column: Heading and intro -->
          <div class="lg:col-span-5">
            <div class="sticky top-8">
              <p class="text-xs font-semibold uppercase tracking-[0.2em] text-primary mb-4">Expertise</p>
              <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-foreground mb-6 tracking-tight">Specialist Support</h2>
              <p class="text-lg text-muted-foreground leading-relaxed mb-8">
                Our experienced care workers are trained to support a wide range of needs and conditions, ensuring everyone receives expert care tailored to their specific circumstances.
              </p>
              
              <!-- Stats and trust badges -->
              <div class="flex flex-wrap gap-6 items-center">
                <div>
                  <p class="text-3xl font-bold text-primary">8+</p>
                  <p class="text-sm text-muted-foreground">Specialisms</p>
                </div>
                <div>
                  <p class="text-3xl font-bold text-primary">100%</p>
                  <p class="text-sm text-muted-foreground">Trained Staff</p>
                </div>
                <div class="flex flex-wrap gap-2">
                  <span class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-full bg-primary/10 border border-primary/20 text-xs font-medium text-primary">
                    <Icon name="tabler:certificate" class="w-3.5 h-3.5" />
                    DBS Checked
                  </span>
                  <span class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-full bg-primary/10 border border-primary/20 text-xs font-medium text-primary">
                    <Icon name="tabler:heart-check" class="w-3.5 h-3.5" />
                    CQC Aligned
                  </span>
                </div>
              </div>
            </div>
          </div>
          
          <!-- Right column: Specialisms grid -->
          <div class="lg:col-span-7">
            <div class="grid sm:grid-cols-2 gap-4">
              {specialisms.map((specialism) => (
                <div class="group relative p-5 rounded-xl bg-card border border-border/60 hover:border-primary/30 hover:shadow-lg hover:shadow-primary/5 transition-all duration-300 hover:-translate-y-1">
                  <div class="flex items-center gap-4">
                    <div class="flex-shrink-0">
                      <div class="inline-flex items-center justify-center h-10 w-10 rounded-xl bg-primary/10 text-primary ring-1 ring-primary/20 group-hover:bg-primary group-hover:text-primary-foreground transition-all duration-300">
                        <Icon name={specialism.icon} class="w-5 h-5" />
                      </div>
                    </div>
                    <div class="flex-1">
                      <span class="font-medium text-foreground group-hover:text-primary transition-colors text-base">{specialism.text}</span>
                    </div>
                  </div>
                  
                  <!-- Hover accent line -->
                  <div class="absolute bottom-0 left-5 right-5 h-px bg-gradient-to-r from-primary/0 via-primary/50 to-primary/0 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <ContactSection
    heading="Arrange Care at Home"
    intro="Get in touch to discuss your care needs or to arrange an assessment."
    phoneLabel="0115 845 0220"
    phoneHref="tel:01158450220"
    address="Nottingham, Nottinghamshire"
  />
</SiteLayout>

---
import SiteLayout from '@layouts/SiteLayout.astro';
import PageHero from '@components/PageHero.astro';
import ContactSection from '@components/ContactSection.astro';
import Icon from '@components/Icon.astro';
import TeamSection from '@components/TeamSection.astro';

const metadata = {
  title: 'About Us - Team Care Domiciliary Support',
  description: 'A Nottinghamshire care provider built on 28 years of combined experience, driven by the belief that home care can be different.',
  schema: {
    '@context': 'https://schema.org',
    '@type': 'AboutPage',
    name: 'About Team Care Domiciliary Support',
    description: 'Team Care Domiciliary Support provides person-centred care across Nottinghamshire, including domiciliary care and supported living services.'
  }
};

// Stats for hero section
const stats = [
  { value: '28+', label: 'Years Combined Experience' },
  { value: '2', label: 'Service Models' },
  { value: '100%', label: 'Trained Staff' },
  { value: '24hr', label: 'Urgent Response' },
];

// Our TEAM CARE values - 8 values that spell out the company name
const values = [
  {
    title: 'Trust',
    description: 'We build trusting relationships through open communication, transparency, and reliability.',
    icon: 'tabler:shield-check'
  },
  {
    title: 'Empathy',
    description: 'We deliver care with compassion, ensuring each person\'s emotional and physical well-being is our priority.',
    icon: 'tabler:heart-handshake'
  },
  {
    title: 'Accountability',
    description: 'We take responsibility for providing the highest standard of care with professionalism and integrity.',
    icon: 'tabler:clipboard-check'
  },
  {
    title: 'Motivation',
    description: 'We are driven by a shared commitment to improving lives, continually striving for excellence.',
    icon: 'tabler:rocket'
  },
  {
    title: 'Collaboration',
    description: 'We work together — individuals, families, care workers, and professionals — to create the best care plan.',
    icon: 'tabler:users-group'
  },
  {
    title: 'Attentiveness',
    description: 'We listen carefully and respond to evolving needs, ensuring comfort, safety, and preferences are respected.',
    icon: 'tabler:ear'
  },
  {
    title: 'Respect',
    description: 'We treat every individual with dignity, honouring their autonomy, choices, and personal values.',
    icon: 'tabler:award'
  },
  {
    title: 'Empowerment',
    description: 'We support everyone to maintain independence, providing care that enhances confidence and quality of life.',
    icon: 'tabler:trending-up'
  }
];

// Our approach principles
const approachPrinciples = [
  {
    title: 'Person-Centred Care',
    description: 'Every care plan is tailored to unique goals, preferences, and strengths.',
    icon: 'tabler:user-heart'
  },
  {
    title: 'Positive Risk-Taking',
    description: 'We empower calculated risks that promote growth and independence.',
    icon: 'tabler:chart-arrows-vertical'
  },
  {
    title: 'Collaborative Decision-Making',
    description: 'Shared decisions with individuals, families, and care teams.',
    icon: 'tabler:hand-stop'
  },
  {
    title: 'Resilience Building',
    description: 'Developing coping skills and problem-solving abilities.',
    icon: 'tabler:arrows-up'
  },
  {
    title: 'Matching by Interest',
    description: 'Care workers paired with individuals based on shared interests.',
    icon: 'tabler:puzzle'
  }
];

---

<SiteLayout metadata={metadata}>

  <PageHero
    heading="About Team Care"
    subheading="A Nottinghamshire care provider built on 28 years of combined experience, driven by the belief that home care can be different."
    primaryCtaText="Make a Referral"
    primaryCtaHref="/referral"
    secondaryCtaText="Our Values"
    secondaryCtaHref="#values"
  >
    <div slot="visual" class="grid grid-cols-2 gap-4 sm:gap-6">
      {stats.map((stat) => (
        <div class="bg-white/10 backdrop-blur-sm border border-white/20 rounded-2xl p-6 text-center hover:bg-white/20 transition-colors duration-300">
          <div class="text-3xl sm:text-4xl font-bold text-white mb-2">{stat.value}</div>
          <div class="text-sm sm:text-base text-white/80 font-medium">{stat.label}</div>
        </div>
      ))}
    </div>
  </PageHero>

  {/* Our Story Section - Visual split layout */}
  <section id="story" class="py-24 bg-background overflow-hidden">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-16 items-center">
        {/* Image side */}
        <div class="relative order-2 lg:order-1">
          <div class="relative aspect-[4/3] rounded-2xl overflow-hidden shadow-2xl shadow-primary/10">
            <img 
              src="https://images.unsplash.com/photo-1576765608866-5b51f8d6eaa4?auto=format&fit=crop&w=900&q=80" 
              alt="Care team member supporting individual in their home"
              class="w-full h-full object-cover"
            />
            <div class="absolute inset-0 bg-gradient-to-tr from-primary/20 via-transparent to-accent/10"></div>
          </div>
          {/* Floating experience card */}
          <div class="absolute -bottom-6 -right-6 bg-card border border-border/70 rounded-xl p-5 shadow-xl max-w-[220px]">
            <div class="flex items-center gap-3">
              <div class="h-12 w-12 rounded-full bg-primary/10 flex items-center justify-center text-primary">
                <Icon name="tabler:award" class="w-6 h-6" />
              </div>
              <div>
                <p class="text-3xl font-bold text-foreground">28+</p>
                <p class="text-xs text-muted-foreground">Years Combined Experience</p>
              </div>
            </div>
          </div>
          {/* Decorative blur */}
          <div class="absolute -top-8 -left-8 w-32 h-32 bg-primary/20 rounded-full blur-3xl -z-10"></div>
        </div>
        
        {/* Content side */}
        <div class="order-1 lg:order-2">
          <p class="text-xs font-semibold uppercase tracking-[0.2em] text-primary mb-4">Our Story</p>
          <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-foreground mb-6 tracking-tight">Built on Experience, Driven by Purpose</h2>
          <div class="space-y-4 text-lg text-muted-foreground leading-relaxed">
            <p>
              The directors of Team Care have extensive experience in setting up services, recruiting staff, training, and supporting care organisations. They've seen both good and bad across the industry and are committed to delivering care that genuinely helps.
            </p>
            <p>
              We operate two distinct models: Domiciliary Care providing personal care, companionship, and crisis support; and Supported Living providing small, homely environments for adults with learning disabilities.
            </p>
          </div>
          
          {/* Service model pills */}
          <div class="mt-8 flex flex-wrap gap-3">
            <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-primary/10 border border-primary/20 text-sm font-medium text-primary">
              <Icon name="tabler:home-heart" class="w-4 h-4" />
              <span>Care at Home</span>
            </div>
            <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-accent/10 border border-accent/20 text-sm font-medium text-accent-foreground">
              <Icon name="tabler:building" class="w-4 h-4" />
              <span>Supported Living</span>
            </div>
          </div>
          
          <blockquote class="mt-8 border-l-4 border-primary pl-6 py-2 bg-primary/5 rounded-r-xl">
            <p class="text-lg font-medium text-foreground italic">
              "We believe that with the right support, individuals can maintain their dignity, choice, and control over their lives."
            </p>
          </blockquote>
        </div>
      </div>
    </div>
  </section>

  {/* Values Section - TEAM CARE */}
  <section id="values" class="py-24 bg-background">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <p class="text-xs font-semibold uppercase tracking-[0.2em] text-primary mb-4">What Drives Us</p>
        <h2 class="text-3xl sm:text-4xl font-bold text-foreground mb-6 tracking-tight">Our Values — TEAM CARE</h2>
        <p class="text-lg text-muted-foreground">
          These eight principles spell out who we are and guide every interaction, every care plan, and every decision we make.
        </p>
      </div>

      {/* Clean 4x2 grid for values */}
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-5">
        {values.map((value, index) => (
          <div class="group relative p-6 rounded-xl bg-card border border-border/70 hover:border-primary/30 transition-all duration-500 hover:-translate-y-1">
            <div class="absolute -inset-px bg-gradient-to-br from-primary/5 to-transparent rounded-xl opacity-0 group-hover:opacity-100 transition-opacity duration-500 -z-10 blur-sm"></div>
            
            <div class="inline-flex h-11 w-11 items-center justify-center rounded-lg bg-primary/10 text-primary ring-1 ring-primary/20 mb-5 group-hover:bg-primary group-hover:text-primary-foreground group-hover:ring-primary/40 transition-all duration-300">
              <Icon name={value.icon} class="w-5 h-5" />
            </div>
            <h3 class="text-lg font-semibold text-foreground mb-2 group-hover:text-primary transition-colors duration-300">{value.title}</h3>
            <p class="text-sm text-muted-foreground leading-relaxed">
              {value.description}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>

  {/* Our Approach Section - Visual with image */}
  <section class="py-24 bg-background overflow-hidden">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-16 items-start">
        {/* Content side */}
        <div>
          <p class="text-xs font-semibold uppercase tracking-[0.2em] text-primary mb-4">Methodology</p>
          <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-foreground mb-6 tracking-tight">Our Approach</h2>
          <p class="text-lg text-muted-foreground leading-relaxed mb-10">
            We combine evidence-based practices with genuine compassion to deliver care that respects individuality and promotes independence.
          </p>
          
          {/* Approach cards - compact horizontal layout */}
          <div class="space-y-4">
            {approachPrinciples.map((principle, index) => (
              <div class="group flex gap-4 p-4 rounded-xl bg-card border border-border/60 hover:border-primary/30 transition-all duration-300">
                <div class="flex-shrink-0">
                  <div class="flex items-center justify-center w-10 h-10 rounded-lg bg-primary/10 text-primary ring-1 ring-primary/20 font-bold text-sm group-hover:bg-primary group-hover:text-primary-foreground transition-all duration-300">
                    {index + 1}
                  </div>
                </div>
                <div class="flex-1">
                  <h3 class="text-base font-semibold text-foreground mb-1 group-hover:text-primary transition-colors">{principle.title}</h3>
                  <p class="text-sm text-muted-foreground">{principle.description}</p>
                </div>
              </div>
            ))}
          </div>
        </div>
        
        {/* Image side */}
        <div class="relative lg:sticky lg:top-24">
          <div class="relative aspect-[3/4] rounded-2xl overflow-hidden shadow-2xl shadow-primary/10">
            <img 
              src="https://images.unsplash.com/photo-1581056771107-24ca5f033842?auto=format&fit=crop&w=800&q=80" 
              alt="Care worker and individual in positive interaction"
              class="w-full h-full object-cover"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/40 via-transparent to-transparent"></div>
            
            {/* Quote overlay */}
            <div class="absolute bottom-6 left-6 right-6">
              <div class="bg-white/95 backdrop-blur-sm rounded-xl p-5 shadow-lg border border-white/20">
                <p class="text-foreground text-sm font-medium italic mb-2">
                  "The staff genuinely listen to what I want. I've never felt more in control of my own life."
                </p>
                <p class="text-xs text-muted-foreground">— Supported Living Resident</p>
              </div>
            </div>
          </div>
          
          {/* Decorative elements */}
          <div class="absolute -top-6 -right-6 w-24 h-24 bg-accent/30 rounded-full blur-2xl -z-10"></div>
          <div class="absolute -bottom-6 -left-6 w-32 h-32 bg-primary/20 rounded-full blur-3xl -z-10"></div>
        </div>
      </div>
    </div>
  </section>

  {/* Leadership Section */}
  <TeamSection
    heading="Our Leadership"
    intro="Team Care Domiciliary Support Ltd is led by experienced professionals committed to excellence in care."
    members={[
      {
        name: "Kerry Gail McCulloch",
        role: "Director & Registered Manager",
        credentials: "Registered Manager",
        description: "Leading Team Care's domiciliary care and supported living services with extensive experience in care management, staff training, and compliance.",
        image: "https://images.unsplash.com/photo-1559839734-2b71ea197ec2?auto=format&fit=crop&w=800&q=80",
        imageAlt: "Kerry Gail McCulloch"
      },
      {
        name: "Ryan Wesson",
        role: "Director",
        credentials: "Supported Living",
        description: "Overseeing supported living operations, ensuring person-centred environments that promote independence and community inclusion.",
        image: "https://images.unsplash.com/photo-1537368910025-700350fe46c7?auto=format&fit=crop&w=800&q=80",
        imageAlt: "Ryan Wesson"
      },
      {
        name: "Nicola Dean",
        role: "Nominated Individual",
        credentials: "Governance",
        description: "Responsible for governance oversight, ensuring regulatory compliance and maintaining the highest standards across all services.",
        image: "https://images.unsplash.com/photo-1573496359142-b8d87734a5a2?auto=format&fit=crop&w=800&q=80",
        imageAlt: "Nicola Dean"
      }
    ]}
  />

  <div class="text-center py-4 -mt-16 mb-8">
    <p class="text-sm text-muted-foreground">
      <strong class="text-foreground">Team Care Domiciliary Support Ltd</strong> — Company Registration: 16012175
    </p>
  </div>

  {/* CTA Section - Premium dark gradient */}
  <section class="py-24 bg-foreground text-background overflow-hidden relative">
    {/* Subtle gradient overlay */}
    <div class="absolute inset-0 bg-gradient-to-br from-primary/10 via-transparent to-accent/10"></div>
    
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center relative">
      <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-white/10 backdrop-blur-sm border border-white/20 mb-8">
        <Icon name="tabler:sparkles" class="w-4 h-4 text-primary" />
        <span class="text-xs font-semibold uppercase tracking-wider text-white/90">Get Started</span>
      </div>
      
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold mb-6 tracking-tight">Ready to Work With Us?</h2>
      <p class="text-xl text-white/80 mb-10 max-w-2xl mx-auto leading-relaxed">
        Whether you're a commissioner, social worker, family member, or individual looking for support, we'd love to hear from you.
      </p>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/referral" class="group inline-flex items-center gap-2 bg-primary hover:bg-primary/90 text-primary-foreground font-semibold py-4 px-10 rounded-xl transition-all shadow-lg shadow-primary/30 hover:shadow-xl hover:shadow-primary/40 hover:-translate-y-0.5">
          <Icon name="tabler:clipboard-list" class="w-5 h-5" />
          Make a Referral
          <Icon name="tabler:arrow-right" class="w-5 h-5 transform group-hover:translate-x-1 transition-transform" />
        </a>
        <a href="/contact" class="group inline-flex items-center gap-2 bg-white/10 hover:bg-white/20 backdrop-blur-sm border border-white/30 text-white font-semibold py-4 px-10 rounded-xl transition-all hover:-translate-y-0.5">
          <Icon name="tabler:message-circle" class="w-5 h-5" />
          Contact Us
        </a>
      </div>
    </div>
  </section>

</SiteLayout>

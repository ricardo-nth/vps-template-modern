---
import SiteLayout from '@layouts/SiteLayout.astro';
import PageHero from '@components/PageHero.astro';
import ContactSection from '@components/ContactSection.astro';
import Icon from '@components/Icon.astro';
import TeamSection from '@components/TeamSection.astro';

const metadata = {
  title: 'About Us - Team Care Domiciliary Support',
  description: 'A Nottinghamshire care provider built on 28 years of combined experience, driven by the belief that home care can be different.',
  schema: {
    '@context': 'https://schema.org',
    '@type': 'AboutPage',
    name: 'About Team Care Domiciliary Support',
    description: 'Team Care Domiciliary Support provides person-centred care across Nottinghamshire, including domiciliary care and supported living services.'
  }
};

// Stats for hero section
const stats = [
  { value: '28+', label: 'Years Combined Experience' },
  { value: '2', label: 'Service Models' },
  { value: '100%', label: 'Trained Staff' },
  { value: '24hr', label: 'Urgent Response' },
];

// Our TEAM CARE values - 8 values that spell out the company name
const values = [
  {
    title: 'Trust',
    description: 'We build trusting relationships through open communication, transparency, and reliability.',
    icon: 'tabler:shield-check'
  },
  {
    title: 'Empathy',
    description: 'We deliver care with compassion, ensuring each person\'s emotional and physical well-being is our priority.',
    icon: 'tabler:heart-handshake'
  },
  {
    title: 'Accountability',
    description: 'We take responsibility for providing the highest standard of care with professionalism and integrity.',
    icon: 'tabler:clipboard-check'
  },
  {
    title: 'Motivation',
    description: 'We are driven by a shared commitment to improving lives, continually striving for excellence.',
    icon: 'tabler:rocket'
  },
  {
    title: 'Collaboration',
    description: 'We work together — individuals, families, care workers, and professionals — to create the best care plan.',
    icon: 'tabler:users-group'
  },
  {
    title: 'Attentiveness',
    description: 'We listen carefully and respond to evolving needs, ensuring comfort, safety, and preferences are respected.',
    icon: 'tabler:ear'
  },
  {
    title: 'Respect',
    description: 'We treat every individual with dignity, honouring their autonomy, choices, and personal values.',
    icon: 'tabler:award'
  },
  {
    title: 'Empowerment',
    description: 'We support everyone to maintain independence, providing care that enhances confidence and quality of life.',
    icon: 'tabler:trending-up'
  }
];

// Our approach principles
const approachPrinciples = [
  {
    title: 'Person-Centred Care',
    description: 'Every care plan is tailored to unique goals, preferences, and strengths.',
    icon: 'tabler:user-heart'
  },
  {
    title: 'Positive Risk-Taking',
    description: 'We empower calculated risks that promote growth and independence.',
    icon: 'tabler:chart-arrows-vertical'
  },
  {
    title: 'Collaborative Decision-Making',
    description: 'Shared decisions with individuals, families, and care teams.',
    icon: 'tabler:hand-stop'
  },
  {
    title: 'Resilience Building',
    description: 'Developing coping skills and problem-solving abilities.',
    icon: 'tabler:arrows-up'
  },
  {
    title: 'Matching by Interest',
    description: 'Care workers paired with individuals based on shared interests.',
    icon: 'tabler:puzzle'
  }
];

---

<SiteLayout metadata={metadata}>

  <PageHero
    heading="About Team Care"
    subheading="A Nottinghamshire care provider built on 28 years of combined experience, driven by the belief that home care can be different."
    primaryCtaText="Make a Referral"
    primaryCtaHref="/referral"
    secondaryCtaText="Our Values"
    secondaryCtaHref="#values"
  >
    <div slot="visual" class="grid grid-cols-2 gap-4 sm:gap-6">
      {stats.map((stat) => (
        <div class="bg-white/10 backdrop-blur-sm border border-white/20 rounded-2xl p-6 text-center hover:bg-white/20 transition-colors duration-300">
          <div class="text-3xl sm:text-4xl font-bold text-white mb-2">{stat.value}</div>
          <div class="text-sm sm:text-base text-white/80 font-medium">{stat.label}</div>
        </div>
      ))}
    </div>
  </PageHero>

  {/* Our Story Section */}
  <section id="story" class="py-24 bg-background">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl sm:text-4xl font-bold text-foreground mb-6">Our Story</h2>
      <h3 class="text-xl text-primary font-medium mb-6">Built on Experience, Driven by Purpose</h3>
      <div class="space-y-4 text-muted-foreground leading-relaxed text-lg">
        <p>
          The directors of Team Care Domiciliary Support Ltd have extensive experience in setting up services, recruiting staff, training, and supporting care organisations. They have seen both good and bad across the industry and are committed to delivering care that genuinely helps individuals, families, and friends.
        </p>
        <p>
          Team Care operates two distinct service models: Domiciliary Care (Care at Home) — providing personal care, companionship, respite, live-in care, and crisis support; and Supported Living — delivered under the trading name Team Care Support & Accommodation, providing small, homely environments for adults with learning disabilities.
        </p>
        <p>
          The company is focused on preventing hospital admissions, supporting smooth discharges, and keeping people independent in their own homes. We believe that with the right support, individuals can maintain their dignity, choice, and control over their lives.
        </p>
      </div>
      <blockquote class="border-l-4 border-primary pl-6 mt-8">
        <p class="text-lg font-medium text-foreground italic">
          We believe that with the right support, individuals can maintain their dignity, choice, and control over their lives.
        </p>
      </blockquote>
    </div>
  </section>

  {/* Values Section - TEAM CARE */}
  <section id="values" class="py-24 bg-secondary/30">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <h2 class="text-3xl sm:text-4xl font-bold text-foreground mb-6">Our Values — TEAM CARE</h2>
        <p class="text-lg text-muted-foreground">
          These eight principles spell out who we are and guide every interaction, every care plan, and every decision we make.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
        {values.map((value) => (
          <div class="bg-card border border-border rounded-xl p-8 shadow-sm hover:shadow-md transition-shadow duration-300 group">
            <div class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center mb-6 group-hover:bg-primary transition-colors duration-300 text-primary group-hover:text-white">
              <Icon name={value.icon} class="w-6 h-6" />
            </div>
            <h3 class="text-xl font-bold text-foreground mb-3">{value.title}</h3>
            <p class="text-muted-foreground leading-relaxed">
              {value.description}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>

  {/* Our Approach Section */}
  <section class="py-24 bg-background">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <h2 class="text-3xl sm:text-4xl font-bold text-foreground mb-6">Our Approach</h2>
        <p class="text-lg text-muted-foreground">
          We combine evidence-based practices with genuine compassion to deliver care that respects individuality and promotes independence.
        </p>
      </div>

      <div class="max-w-4xl mx-auto space-y-8">
        {approachPrinciples.map((principle, index) => (
          <div class="flex gap-6">
            <div class="flex-shrink-0">
              <div class="flex items-center justify-center w-12 h-12 rounded-full bg-primary text-primary-foreground text-xl font-bold">
                {index + 1}
              </div>
            </div>
            <div class="flex-grow pt-1">
              <h3 class="text-xl font-semibold text-foreground mb-2">{principle.title}</h3>
              <p class="text-muted-foreground">{principle.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  {/* Leadership Section */}
  <TeamSection
    heading="Our Leadership"
    intro="Team Care Domiciliary Support Ltd is led by experienced professionals committed to excellence in care."
    members={[
      {
        name: "Kerry Gail McCulloch",
        role: "Director & Registered Manager",
        credentials: "Registered Manager",
        description: "Leading Team Care's domiciliary care and supported living services with extensive experience in care management, staff training, and compliance.",
        image: "https://images.unsplash.com/photo-1559839734-2b71ea197ec2?auto=format&fit=crop&w=800&q=80",
        imageAlt: "Kerry Gail McCulloch"
      },
      {
        name: "Ryan Wesson",
        role: "Director",
        credentials: "Supported Living",
        description: "Overseeing supported living operations, ensuring person-centred environments that promote independence and community inclusion.",
        image: "https://images.unsplash.com/photo-1537368910025-700350fe46c7?auto=format&fit=crop&w=800&q=80",
        imageAlt: "Ryan Wesson"
      },
      {
        name: "Nicola Dean",
        role: "Nominated Individual",
        credentials: "Governance",
        description: "Responsible for governance oversight, ensuring regulatory compliance and maintaining the highest standards across all services.",
        image: "https://images.unsplash.com/photo-1573496359142-b8d87734a5a2?auto=format&fit=crop&w=800&q=80",
        imageAlt: "Nicola Dean"
      }
    ]}
  />

  <div class="text-center py-4 -mt-16 mb-8">
    <p class="text-sm text-muted-foreground">
      <strong class="text-foreground">Team Care Domiciliary Support Ltd</strong> — Company Registration: 16012175
    </p>
  </div>

  {/* CTA Section */}
  <section class="py-20 bg-primary text-primary-foreground">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl sm:text-4xl font-bold mb-6">Ready to Work With Us?</h2>
      <p class="text-xl opacity-90 mb-10 max-w-2xl mx-auto">
        Whether you are a commissioner, social worker, family member, or individual looking for support, we would love to hear from you.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/referral" class="inline-block bg-white text-primary font-bold py-4 px-10 rounded-full hover:bg-accent hover:text-accent-foreground transition-all duration-300 shadow-lg transform hover:-translate-y-1">
          Make a Referral
        </a>
        <a href="/contact" class="inline-block bg-transparent border-2 border-white text-white font-bold py-4 px-10 rounded-full hover:bg-white hover:text-primary transition-all duration-300 shadow-lg transform hover:-translate-y-1">
          Contact Us
        </a>
      </div>
    </div>
  </section>

</SiteLayout>

---
import SiteLayout from '@layouts/SiteLayout.astro';
import { getEntry } from 'astro:content';
import TeamSection from '@components/TeamSection.astro';
import PageHero from '@components/PageHero.astro';
import Icon from '@components/Icon.astro';
import { getModernImage } from '@/lib/content/imageRegistry';

const aboutEntry = await getEntry('modernAbout', 'default');
const aboutDomEntry = await getEntry('modernAbout', 'dom-care');
if (!aboutEntry) {
  throw new Error('Missing content entry: modernAbout/default');
}
if (!aboutDomEntry) {
  throw new Error('Missing content entry: modernAbout/dom-care');
}

const metadata = aboutEntry.data.metadata;
const profiles = [
  { key: 'supported-living', content: aboutEntry.data },
  { key: 'dom-care', content: aboutDomEntry.data },
] as const;
---

<SiteLayout metadata={metadata}>
  <div data-care-profile-switcher>
    {profiles.map(({ key, content }) => (
      <div data-care-profile-panel={key} class:list={{ hidden: key !== 'supported-living' }}>
        <PageHero
          heading={content.hero.heading}
          subheading={content.hero.subheading}
          primaryCtaText={content.hero.primaryCtaText}
          primaryCtaHref={content.hero.primaryCtaHref}
          secondaryCtaText={content.hero.secondaryCtaText}
          secondaryCtaHref={content.hero.secondaryCtaHref}
          imageSrc={getModernImage(content.hero.imageKey)}
          imageAlt={content.hero.imageAlt}
          socialProofTitle={content.hero.socialProofTitle}
          socialProofSubtitle={content.hero.socialProofSubtitle}
          socialProofCountLabel={content.hero.socialProofCountLabel}
        >
          <div slot="visual" class="grid grid-cols-2 gap-4 sm:gap-6">
            {content.stats.map((stat) => (
              <div class="bg-white/10 backdrop-blur-sm border border-white/20 rounded-2xl p-6 text-center hover:bg-white/20 transition-colors duration-300">
                <div class="text-3xl sm:text-4xl font-bold text-white mb-2">{stat.value}</div>
                <div class="text-sm sm:text-base text-white/80 font-medium">{stat.label}</div>
              </div>
            ))}
          </div>
        </PageHero>

        <section id="story" class="py-24 bg-background">
          <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="grid lg:grid-cols-2 gap-16 items-center">
              <div class="relative">
                <div class="aspect-[4/3] rounded-3xl overflow-hidden shadow-2xl bg-muted">
                  <div class="w-full h-full bg-gradient-to-br from-primary/20 to-secondary flex items-center justify-center text-muted-foreground">
                    <span class="text-lg font-medium">{content.story.imagePlaceholderLabel}</span>
                  </div>
                </div>
                <div class="absolute -bottom-6 -right-6 w-24 h-24 bg-accent rounded-full opacity-50 blur-2xl"></div>
                <div class="absolute -top-6 -left-6 w-32 h-32 bg-primary rounded-full opacity-20 blur-3xl"></div>
              </div>

              <div>
                <h2 class="text-3xl sm:text-4xl font-bold text-foreground mb-6">{content.story.heading}</h2>
                <h3 class="text-xl text-primary font-medium mb-6">{content.story.subheading}</h3>
                <div class="space-y-4 text-muted-foreground leading-relaxed text-lg">
                  {content.story.paragraphs.map((paragraph) => (
                    <p>{paragraph}</p>
                  ))}
                </div>
              </div>
            </div>
          </div>
        </section>

        <section class="py-24 bg-secondary/30">
          <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center max-w-3xl mx-auto mb-16">
              <h2 class="text-3xl sm:text-4xl font-bold text-foreground mb-6">{content.valuesSection.heading}</h2>
              <p class="text-lg text-muted-foreground">{content.valuesSection.intro}</p>
            </div>

            <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
              {content.values.map((value) => (
                <div class="bg-card border border-border rounded-xl p-8 shadow-sm hover:shadow-md transition-shadow duration-300 group">
                  <div class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center mb-6 group-hover:bg-primary group-hover:text-white transition-colors duration-300 text-primary">
                    <Icon name={value.icon} size={24} />
                  </div>
                  <h3 class="text-xl font-bold text-foreground mb-3">{value.title}</h3>
                  <p class="text-muted-foreground leading-relaxed">{value.description}</p>
                </div>
              ))}
            </div>
          </div>
        </section>

        <TeamSection
          heading={content.teamSection.heading}
          intro={content.teamSection.intro}
          members={content.teamSection.members.map(({ imageKey, ...member }) => ({
            ...member,
            image: getModernImage(imageKey),
          }))}
        />

        <section class="py-20 bg-primary text-primary-foreground">
          <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
            <h2 class="text-3xl sm:text-4xl font-bold mb-6">{content.ctaSection.heading}</h2>
            <p class="text-xl opacity-90 mb-10 max-w-2xl mx-auto">{content.ctaSection.intro}</p>
            <a href={content.ctaSection.buttonHref} target="_blank" rel="noopener" class="inline-block bg-white text-primary font-bold py-4 px-10 rounded-full hover:bg-accent hover:text-accent-foreground transition-all duration-300 shadow-lg transform hover:-translate-y-1">
              {content.ctaSection.buttonText}
            </a>
          </div>
        </section>
      </div>
    ))}
  </div>
</SiteLayout>

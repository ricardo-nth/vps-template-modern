---
import SiteLayout from '@layouts/SiteLayout.astro';
import PageHero from '@components/PageHero.astro';
import ContactOptions from '@components/ContactOptions.astro';
import OfficeLocation from '@components/OfficeLocation.astro';
import FeedbackSection from '@components/FeedbackSection.astro';

const metadata = {
  title: 'Contact - Team Care Support',
  description: 'Get in touch with Team Care Support. Call 0115 845 0220 or email help@teamcaresupport.com. Offices at Foxhall Lodge, Nottingham and Renewal House, Carlton.',
  schema: {
    '@context': 'https://schema.org',
    '@type': 'ContactPage',
    name: 'Contact Us',
    description: 'Get in touch with Team Care Support for care services, referrals, or inquiries.'
  }
};
---

<SiteLayout metadata={metadata}>
  <PageHero
    heading="We're Here to <span class='text-accent'>Help</span>"
    subheading="Whether you need care for yourself or a loved one, want to make a referral, or have a question about our services, our team is ready to help."
    primaryCtaText="Call Now"
    primaryCtaHref="tel:01158450220"
    secondaryCtaText="Email Us"
    secondaryCtaHref="mailto:help@teamcaresupport.com"
  >
    <div slot="visual" class="bg-white/10 backdrop-blur-md border border-white/20 rounded-3xl p-8">
      <h3 class="text-2xl font-bold text-white mb-6">Quick Contact</h3>
      <ContactOptions variant="hero" />
    </div>
  </PageHero>

  <section class="py-24 bg-background">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <h2 class="text-3xl sm:text-4xl font-bold text-foreground mb-6">How Can We Help?</h2>
        <p class="text-lg text-muted-foreground">
          Choose the most convenient way to get in touch. Our dedicated team is available to answer your questions and provide the support you need.
        </p>
      </div>
      <ContactOptions variant="grid" />
    </div>
  </section>

  <OfficeLocation />

  <FeedbackSection />
</SiteLayout>
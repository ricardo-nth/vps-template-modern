---
/**
 * index.astro - Homepage
 *
 * Team Care Support & Accommodation homepage showcasing person-centred care services
 * including supported living, domiciliary care, virtual support, and group activities.
 */

import SiteLayout from '../layouts/SiteLayout.astro';

import Hero from '../components/Hero.astro';
import ServicesOverview from '../components/ServicesOverview.astro';
import AboutUs from '../components/AboutUs.astro';
import WhyChooseUs from '../components/WhyChooseUs.astro';
import ContactSection from '../components/ContactSection.astro';

// Page metadata
const metadata = {
  title: 'Team Care Support & Accommodation | Domiciliary Care & Supported Living in Nottinghamshire',
  description: 'Person-centred domiciliary care and supported living for adults with learning disabilities, autism, and mental health conditions across Nottinghamshire.',
  schema: {
    '@context': 'https://schema.org',
    '@type': 'WebPage',
    name: 'Team Care Support & Accommodation | Domiciliary Care & Supported Living in Nottinghamshire',
    description: 'Person-centred domiciliary care and supported living for adults with learning disabilities, autism, and mental health conditions across Nottinghamshire.',
  },
};
---

<SiteLayout metadata={metadata}>

  <!-- Hero Section -->
  <Hero
    heading="Support That Builds Independence, Not Dependence"
    subheading="Person-centred domiciliary care and supported living for adults across Nottinghamshire. We help people build skills, confidence, and meaningful lives."
    primaryCtaText="Make a Referral"
    primaryCtaHref="/referral"
    secondaryCtaText="Our Services"
    secondaryCtaHref="#services"
    imageSrc="https://images.unsplash.com/photo-1573497019940-1c28c88b4f3e?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80"
    imageAlt="Person-centred care and support in the community"
  />

  <!-- Services Section -->
  <ServicesOverview
    eyebrow="Our Services"
    heading="How We Support You"
    intro="From supported living to domiciliary care, virtual support, and group activities, we deliver flexible, person-centred services designed around individual needs."
    services={[
      {
        title: "Supported Living",
        description: "Small, homely supported living for adults with learning disabilities. Own tenancy, flexible support, and a focus on building real independence.",
        href: "/supported-living",
        imageSrc: "https://images.unsplash.com/photo-1576091160550-2173dba999ef?auto=format&fit=crop&w=800&q=80",
        imageAlt: "Supported living environment with person-centred care"
      },
      {
        title: "Care at Home",
        description: "Professional domiciliary care in your own home. Personal care, medication support, companionship, respite, and crisis management.",
        href: "/care-at-home",
        imageSrc: "https://images.unsplash.com/photo-1581594693702-fbdc51b2763b?auto=format&fit=crop&w=800&q=80",
        imageAlt: "Domiciliary care support at home"
      },
      {
        title: "Virtual & Blended Support",
        description: "Remote emotional support, check-ins, and routine reminders. A step-down model that encourages confidence and self-management.",
        href: "/virtual-support",
        imageSrc: "https://images.unsplash.com/photo-1576765611791-374770ac4db8?auto=format&fit=crop&w=800&q=80",
        imageAlt: "Virtual support and remote care check-ins"
      },
      {
        title: "Group Activities",
        description: "Skill-building sessions, community access, and shared interest activities. Building friendships and confidence through group support.",
        href: "/group-activities",
        imageSrc: "https://images.unsplash.com/photo-1559839734-2b71ea197ec2?auto=format&fit=crop&w=800&q=80",
        imageAlt: "Group activities and community engagement"
      }
    ]}
  />

  <!-- About Us Section -->
  <AboutUs
    imageSrc="https://images.unsplash.com/photo-1576091160550-2173dba999ef?auto=format&fit=crop&w=900&q=80"
    imageAlt="Team Care Support person-centred approach"
  />

  <!-- Why Choose Us Section -->
  <WhyChooseUs
    eyebrow="Why Team Care"
    heading="The TEAM CARE Difference"
    intro="Our values are the foundation of everything we do. TEAM CARE stands for Trust, Empathy, Accountability, Motivation, Collaboration, Attentiveness, Respect, and Empowerment."
    imageSrc="https://images.unsplash.com/photo-1576091160399-112ba8d25d1d?ixlib=rb-4.0.3&auto=format&fit=crop&w=900&q=80"
    imageAlt="Team Care values in action"
    ctaText="About Us"
    ctaHref="/about"
    points={[
      {
        title: "Person-Centred Always",
        description: "Every care plan is co-produced with the individual, focused on what matters most to them â€” not what fits a rota.",
        iconName: "tabler:heart-handshake"
      },
      {
        title: "Independence First",
        description: "We support people to move forward. Our blended model reduces dependency and builds skills for greater autonomy.",
        iconName: "tabler:trending-up"
      },
      {
        title: "Matched by Interest",
        description: "We match care workers to individuals based on shared interests and strengths, not just availability.",
        iconName: "tabler:users-group"
      },
      {
        title: "Quality & Safety",
        description: "Robust safeguarding, DBS-checked staff, trauma-informed training, and CQC-aligned governance throughout.",
        iconName: "tabler:shield-check"
      }
    ]}
  />

  <!-- Contact Section -->
  <ContactSection
    heading="Get In Touch"
    intro="Ready to discuss how we can support you or someone you care about? We are here to help."
    phoneLabel="0115 845 0220"
    phoneHref="tel:01158450220"
    address="Nottingham, Nottinghamshire"
  />

</SiteLayout>

---
import SiteLayout from '@layouts/SiteLayout.astro';
import PageHero from '@components/PageHero.astro';
import WhyChooseUs from '@components/WhyChooseUs.astro';
import CqcJourney from '@components/CqcJourney.astro';
import ContactSection from '@components/ContactSection.astro';

const metadata = {
  title: 'Our Approach - [Business Name]',
  description: '[Your approach page meta description - summarize your methodology in 150-160 characters]',
  schema: {
    '@context': 'https://schema.org',
    '@type': 'WebPage',
    name: 'Our Approach',
    description: '[Your approach description for search engines]'
  }
};
---

<SiteLayout metadata={metadata}>
  <PageHero
    heading="[Your Approach Headline] <span class='text-accent'>[Highlight]</span>"
    subheading="[Brief description of your approach and methodology]"
    primaryCtaText="Contact Us"
    primaryCtaHref="/contact"
    secondaryCtaText="Our Values"
    secondaryCtaHref="#values"
    imageSrc="https://images.unsplash.com/photo-1584466977773-270f5fcd5864?auto=format&fit=crop&w=2070&q=80"
    imageAlt="[Descriptive alt text]"
  />

  <WhyChooseUs
    eyebrow="Our Ethos"
    heading="[Why Clients Choose You]"
    intro="[Brief description of your values and what makes your approach unique]"
    imageSrc="https://images.unsplash.com/photo-1576091160399-112ba8d25d1d?ixlib=rb-4.0.3&auto=format&fit=crop&w=900&q=80"
    imageAlt="Healthcare team providing quality care"
    id="values"
  />

  <CqcJourney />

  <ContactSection
    heading="[Your CTA Headline]"
    intro="[Brief call-to-action encouraging visitors to contact you]"
    phoneLabel="[Your Phone]"
    phoneHref="tel:[Your Phone]"
    emailLabel="[Your Email]"
    emailHref="mailto:[Your Email]"
    address="[Your City, Region]"
  />
</SiteLayout>
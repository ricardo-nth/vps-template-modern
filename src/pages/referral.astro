---
import SiteLayout from '@layouts/SiteLayout.astro';
import PageHero from '@components/PageHero.astro';
import ContactSection from '@components/ContactSection.astro';
import Icon from '@components/Icon.astro';

const metadata = {
  title: 'Make a Referral - Team Care Support',
  description: 'Refer someone for supported living or domiciliary care services. We accept professional referrals, family referrals, and self-referrals.',
  schema: {
    '@context': 'https://schema.org',
    '@type': 'WebPage',
    name: 'Make a Referral',
    description: 'Refer someone for our care services.'
  }
};

const referralSteps = [
  { number: '1', title: 'Initial Contact', description: 'Call us on 0115 845 0220 or email help@teamcaresupport.com to discuss the referral' },
  { number: '2', title: 'Information Gathering', description: 'We collect relevant details about needs, preferences, and circumstances' },
  { number: '3', title: 'Assessment', description: 'Our Care Manager arranges a comprehensive needs assessment and risk evaluation' },
  { number: '4', title: 'Care Planning', description: 'We develop a person-centred support plan in partnership with the individual' },
  { number: '5', title: 'Matching', description: 'We select care workers based on personality, skills, and shared interests' },
  { number: '6', title: 'Service Commencement', description: 'Support begins with regular reviews to ensure quality and responsiveness' }
];
---
<SiteLayout metadata={metadata}>
  <PageHero
    heading="Make a Referral"
    subheading="Whether you are a professional, family member, or self-referring, we are here to help. Get in touch to discuss how we can support you."
    primaryCtaText="Call Us Now"
    primaryCtaHref="tel:01158450220"
    secondaryCtaText="Email Us"
    secondaryCtaHref="mailto:help@teamcaresupport.com"
  />

  <!-- Who Can Refer - Clean 3-column grid -->
  <section class="py-24 bg-background">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <p class="text-xs font-semibold uppercase tracking-[0.2em] text-primary mb-4">Referrals</p>
        <h2 class="text-3xl sm:text-4xl font-bold text-foreground mb-4 tracking-tight">Who Can Refer</h2>
        <p class="text-lg text-muted-foreground max-w-3xl mx-auto">
          We welcome referrals from professionals, families, and individuals seeking support
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-6">
        <div class="group relative p-8 rounded-xl bg-card border border-border/70 hover:border-primary/30 transition-all duration-500 hover:-translate-y-1">
          <div class="absolute -inset-px bg-gradient-to-br from-primary/5 to-transparent rounded-xl opacity-0 group-hover:opacity-100 transition-opacity duration-500 -z-10 blur-sm"></div>
          <div class="inline-flex h-14 w-14 items-center justify-center rounded-xl bg-primary/10 text-primary ring-1 ring-primary/20 mb-5 group-hover:bg-primary group-hover:text-primary-foreground group-hover:ring-primary/40 transition-all duration-300">
            <Icon name="tabler:briefcase" class="w-6 h-6" />
          </div>
          <h3 class="text-lg font-semibold text-foreground mb-3 group-hover:text-primary transition-colors">Professional Referrals</h3>
          <p class="text-sm text-muted-foreground leading-relaxed">Social workers, care managers, commissioners, healthcare professionals. We work with local authorities across Nottinghamshire.</p>
        </div>

        <div class="group relative p-8 rounded-xl bg-card border border-border/70 hover:border-primary/30 transition-all duration-500 hover:-translate-y-1">
          <div class="absolute -inset-px bg-gradient-to-br from-primary/5 to-transparent rounded-xl opacity-0 group-hover:opacity-100 transition-opacity duration-500 -z-10 blur-sm"></div>
          <div class="inline-flex h-14 w-14 items-center justify-center rounded-xl bg-primary/10 text-primary ring-1 ring-primary/20 mb-5 group-hover:bg-primary group-hover:text-primary-foreground group-hover:ring-primary/40 transition-all duration-300">
            <Icon name="tabler:heart" class="w-6 h-6" />
          </div>
          <h3 class="text-lg font-semibold text-foreground mb-3 group-hover:text-primary transition-colors">Family & Advocate Referrals</h3>
          <p class="text-sm text-muted-foreground leading-relaxed">Family members, friends, or advocates can refer someone they care about. We'll guide you through the process.</p>
        </div>

        <div class="group relative p-8 rounded-xl bg-card border border-border/70 hover:border-primary/30 transition-all duration-500 hover:-translate-y-1">
          <div class="absolute -inset-px bg-gradient-to-br from-primary/5 to-transparent rounded-xl opacity-0 group-hover:opacity-100 transition-opacity duration-500 -z-10 blur-sm"></div>
          <div class="inline-flex h-14 w-14 items-center justify-center rounded-xl bg-primary/10 text-primary ring-1 ring-primary/20 mb-5 group-hover:bg-primary group-hover:text-primary-foreground group-hover:ring-primary/40 transition-all duration-300">
            <Icon name="tabler:user" class="w-6 h-6" />
          </div>
          <h3 class="text-lg font-semibold text-foreground mb-3 group-hover:text-primary transition-colors">Self-Referrals</h3>
          <p class="text-sm text-muted-foreground leading-relaxed">Individuals can refer themselves. Contact us directly to discuss your needs and how we can help.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Our Referral Process - Visual timeline with image -->
  <section class="py-24 bg-background overflow-hidden">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <p class="text-xs font-semibold uppercase tracking-[0.2em] text-primary mb-4">Process</p>
        <h2 class="text-3xl sm:text-4xl font-bold text-foreground mb-4 tracking-tight">Our Referral Process</h2>
        <p class="text-lg text-muted-foreground max-w-3xl mx-auto">
          A clear, straightforward process from initial contact to service commencement
        </p>
      </div>

      <div class="grid lg:grid-cols-2 gap-16 items-start">
        {/* Timeline side */}
        <div class="relative">
          {/* Timeline line - behind circles */}
          <div class="absolute left-6 top-8 bottom-8 w-px bg-gradient-to-b from-primary via-accent to-primary/30 hidden sm:block -z-10"></div>
          
          <div class="space-y-6">
            {[
              { number: '1', title: 'Initial Contact', description: 'Call us on 0115 845 0220 or email help@teamcaresupport.com to discuss the referral' },
              { number: '2', title: 'Information Gathering', description: 'We collect relevant details about the individual\'s needs, preferences, and circumstances' },
              { number: '3', title: 'Assessment', description: 'Our Care Manager arranges a comprehensive needs assessment and risk evaluation' },
              { number: '4', title: 'Care Planning', description: 'We develop a person-centred support plan in partnership with the individual' },
              { number: '5', title: 'Matching', description: 'We select care workers based on personality, skills, and shared interests' },
              { number: '6', title: 'Service Commencement', description: 'Support begins with regular reviews to ensure quality and responsiveness' }
            ].map((step) => (
              <div class="relative flex gap-6">
                <div class="flex-shrink-0">
                  <div class="flex items-center justify-center w-12 h-12 rounded-full bg-background text-primary ring-1 ring-primary/30 font-bold text-lg shadow-sm">
                    {step.number}
                  </div>
                </div>
                <div class="flex-1 pt-2">
                  <h3 class="text-lg font-semibold text-foreground mb-1">{step.title}</h3>
                  <p class="text-sm text-muted-foreground leading-relaxed">{step.description}</p>
                </div>
              </div>
            ))}
          </div>
        </div>
        
        {/* Image side */}
        <div class="relative lg:sticky lg:top-24">
          <div class="relative aspect-square rounded-2xl overflow-hidden shadow-2xl shadow-primary/10">
            <img 
              src="https://images.unsplash.com/photo-1573497019940-1c28c88b4f3e?auto=format&fit=crop&w=800&q=80" 
              alt="Care assessment meeting"
              class="w-full h-full object-cover"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent"></div>
            
            {/* Quick contact card */}
            <div class="absolute bottom-6 left-6 right-6">
              <div class="bg-white/95 backdrop-blur-sm rounded-xl p-5 shadow-lg border border-white/20">
                <p class="text-sm font-semibold text-foreground mb-3">Ready to start a referral?</p>
                <div class="flex flex-wrap gap-3">
                  <a href="tel:01158450220" class="inline-flex items-center gap-2 px-4 py-2 bg-primary/10 text-primary rounded-lg text-sm font-medium hover:bg-primary hover:text-primary-foreground transition-colors">
                    <Icon name="tabler:phone" class="w-4 h-4" />
                    0115 845 0220
                  </a>
                  <a href="mailto:help@teamcaresupport.com" class="inline-flex items-center gap-2 px-4 py-2 bg-primary/10 text-primary rounded-lg text-sm font-medium hover:bg-primary hover:text-primary-foreground transition-colors">
                    <Icon name="tabler:mail" class="w-4 h-4" />
                    Email us
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- What We Need - Visual checklist cards -->
  <section class="py-24 bg-background">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <p class="text-xs font-semibold uppercase tracking-[0.2em] text-primary mb-4">Information</p>
        <h2 class="text-3xl sm:text-4xl font-bold text-foreground mb-4 tracking-tight">What We Need</h2>
        <p class="text-lg text-muted-foreground max-w-3xl mx-auto">
          Information helpful for a referral — but don't worry if you don't have everything
        </p>
      </div>

      <div class="grid lg:grid-cols-3 gap-6">
        {/* Essential Information */}
        <div class="group relative p-8 rounded-xl bg-card border border-border/70 hover:border-primary/30 transition-all duration-500 lg:col-span-2">
          <div class="absolute -inset-px bg-gradient-to-br from-primary/5 to-transparent rounded-xl opacity-0 group-hover:opacity-100 transition-opacity duration-500 -z-10 blur-sm"></div>
          
          <div class="inline-flex items-center gap-2 px-3 py-1.5 rounded-full bg-primary/10 border border-primary/20 mb-6">
            <Icon name="tabler:clipboard-list" class="w-4 h-4 text-primary" />
            <span class="text-xs font-semibold uppercase tracking-wider text-primary">Essential</span>
          </div>
          
          <h3 class="text-xl font-semibold text-foreground mb-5">Essential Information</h3>
          <ul class="space-y-4">
            <li class="flex items-start gap-3">
              <div class="inline-flex h-6 w-6 items-center justify-center rounded-full bg-primary/10 text-primary flex-shrink-0 mt-0.5">
                <Icon name="tabler:check" class="w-3.5 h-3.5" />
              </div>
              <span class="text-muted-foreground">Name, age, and contact details</span>
            </li>
            <li class="flex items-start gap-3">
              <div class="inline-flex h-6 w-6 items-center justify-center rounded-full bg-primary/10 text-primary flex-shrink-0 mt-0.5">
                <Icon name="tabler:check" class="w-3.5 h-3.5" />
              </div>
              <span class="text-muted-foreground">Current living situation</span>
            </li>
            <li class="flex items-start gap-3">
              <div class="inline-flex h-6 w-6 items-center justify-center rounded-full bg-primary/10 text-primary flex-shrink-0 mt-0.5">
                <Icon name="tabler:check" class="w-3.5 h-3.5" />
              </div>
              <span class="text-muted-foreground">Nature of support needs (personal care, supported living, etc.)</span>
            </li>
          </ul>
        </div>

        {/* Helpful + Don't worry stacked */}
        <div class="space-y-6">
          <div class="group relative p-8 rounded-xl bg-card border border-border/70 hover:border-primary/30 transition-all duration-500">
            <div class="absolute -inset-px bg-gradient-to-br from-primary/5 to-transparent rounded-xl opacity-0 group-hover:opacity-100 transition-opacity duration-500 -z-10 blur-sm"></div>
            
            <div class="inline-flex items-center gap-2 px-3 py-1.5 rounded-full bg-accent/10 border border-accent/20 mb-6">
              <Icon name="tabler:file-text" class="w-4 h-4 text-accent" />
              <span class="text-xs font-semibold uppercase tracking-wider text-accent-foreground">Helpful</span>
            </div>
            
            <h3 class="text-lg font-semibold text-foreground mb-4">Helpful If Available</h3>
            <ul class="space-y-3">
              <li class="flex items-start gap-3 text-sm text-muted-foreground">
                <Icon name="tabler:check" class="w-4 h-4 text-primary flex-shrink-0 mt-0.5" />
                <span>Assessments or care plans</span>
              </li>
              <li class="flex items-start gap-3 text-sm text-muted-foreground">
                <Icon name="tabler:check" class="w-4 h-4 text-primary flex-shrink-0 mt-0.5" />
                <span>Funding arrangements</span>
              </li>
              <li class="flex items-start gap-3 text-sm text-muted-foreground">
                <Icon name="tabler:check" class="w-4 h-4 text-primary flex-shrink-0 mt-0.5" />
                <span>Specific preferences</span>
              </li>
            </ul>
          </div>

          {/* Don't worry card */}
          <div class="relative p-6 rounded-xl bg-primary/5 border border-primary/20 overflow-hidden">
            <div class="absolute top-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-primary/30 to-transparent"></div>
            <div class="flex items-start gap-4">
              <div class="inline-flex h-10 w-10 items-center justify-center rounded-lg bg-primary/10 text-primary flex-shrink-0">
                <Icon name="tabler:info-circle" class="w-5 h-5" />
              </div>
              <div>
                <h3 class="text-base font-semibold text-foreground mb-1">Don't worry</h3>
                <p class="text-sm text-muted-foreground">
                  Don't worry if you don't have all this information — we can work through it together.
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Funding Options - Visual cards -->
  <section class="py-24 bg-background">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <p class="text-xs font-semibold uppercase tracking-[0.2em] text-primary mb-4">Payment</p>
        <h2 class="text-3xl sm:text-4xl font-bold text-foreground mb-4 tracking-tight">Funding Options</h2>
        <p class="text-lg text-muted-foreground max-w-3xl mx-auto">
          Flexible funding arrangements to meet different circumstances
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-6">
        <div class="group relative p-8 rounded-xl bg-card border border-border/70 hover:border-primary/30 transition-all duration-500 hover:-translate-y-1">
          <div class="absolute -inset-px bg-gradient-to-br from-primary/5 to-transparent rounded-xl opacity-0 group-hover:opacity-100 transition-opacity duration-500 -z-10 blur-sm"></div>
          <div class="inline-flex h-12 w-12 items-center justify-center rounded-xl bg-primary/10 text-primary ring-1 ring-primary/20 mb-5 group-hover:bg-primary group-hover:text-primary-foreground group-hover:ring-primary/40 transition-all duration-300">
            <Icon name="tabler:building-bank" class="w-6 h-6" />
          </div>
          <h3 class="text-lg font-semibold text-foreground mb-3 group-hover:text-primary transition-colors">Local Authority Commissioning</h3>
          <p class="text-sm text-muted-foreground leading-relaxed">We work directly with local authorities across Nottinghamshire to provide commissioned care services.</p>
        </div>

        <div class="group relative p-8 rounded-xl bg-card border border-border/70 hover:border-primary/30 transition-all duration-500 hover:-translate-y-1">
          <div class="absolute -inset-px bg-gradient-to-br from-primary/5 to-transparent rounded-xl opacity-0 group-hover:opacity-100 transition-opacity duration-500 -z-10 blur-sm"></div>
          <div class="inline-flex h-12 w-12 items-center justify-center rounded-xl bg-primary/10 text-primary ring-1 ring-primary/20 mb-5 group-hover:bg-primary group-hover:text-primary-foreground group-hover:ring-primary/40 transition-all duration-300">
            <Icon name="tabler:wallet" class="w-6 h-6" />
          </div>
          <h3 class="text-lg font-semibold text-foreground mb-3 group-hover:text-primary transition-colors">Direct Payments</h3>
          <p class="text-sm text-muted-foreground leading-relaxed">We accept direct payments for individuals managing their own care budgets.</p>
        </div>

        <div class="group relative p-8 rounded-xl bg-card border border-border/70 hover:border-primary/30 transition-all duration-500 hover:-translate-y-1">
          <div class="absolute -inset-px bg-gradient-to-br from-primary/5 to-transparent rounded-xl opacity-0 group-hover:opacity-100 transition-opacity duration-500 -z-10 blur-sm"></div>
          <div class="inline-flex h-12 w-12 items-center justify-center rounded-xl bg-primary/10 text-primary ring-1 ring-primary/20 mb-5 group-hover:bg-primary group-hover:text-primary-foreground group-hover:ring-primary/40 transition-all duration-300">
            <Icon name="tabler:home-dollar" class="w-6 h-6" />
          </div>
          <h3 class="text-lg font-semibold text-foreground mb-3 group-hover:text-primary transition-colors">Private & Family-Funded</h3>
          <p class="text-sm text-muted-foreground leading-relaxed">We work collaboratively with families to create sustainable placements that meet individual needs.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Form - Visual 2-column layout -->
  <section class="py-24 bg-background overflow-hidden">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-16 items-start">
        {/* Form side */}
        <div>
          <div class="text-center lg:text-left mb-10">
            <div class="inline-flex items-center justify-center w-14 h-14 rounded-2xl bg-primary/10 text-primary ring-1 ring-primary/20 mb-6">
              <Icon name="tabler:send" class="w-7 h-7" />
            </div>
            <p class="text-xs font-semibold uppercase tracking-[0.2em] text-primary mb-4">Get Started</p>
            <h2 class="text-3xl sm:text-4xl font-bold text-foreground mb-4 tracking-tight">Submit a Referral</h2>
            <p class="text-lg text-muted-foreground">
              Complete the form below or contact us directly
            </p>
          </div>

          <form class="relative bg-card border border-border/70 rounded-2xl p-8 shadow-xl space-y-5">
            <div class="absolute top-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-primary/30 to-transparent"></div>
            
            <div class="grid sm:grid-cols-2 gap-5">
              <div>
                <label for="name" class="block text-sm font-medium text-foreground mb-2">Name</label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  class="w-full px-4 py-3 bg-muted/30 border border-border/60 rounded-xl focus:outline-none focus:ring-2 focus:ring-primary/50 focus:border-primary transition-all"
                  placeholder="Full name"
                />
              </div>
              <div>
                <label for="phone" class="block text-sm font-medium text-foreground mb-2">Phone</label>
                <input
                  type="tel"
                  id="phone"
                  name="phone"
                  class="w-full px-4 py-3 bg-muted/30 border border-border/60 rounded-xl focus:outline-none focus:ring-2 focus:ring-primary/50 focus:border-primary transition-all"
                  placeholder="Phone number"
                />
              </div>
            </div>

            <div>
              <label for="email" class="block text-sm font-medium text-foreground mb-2">Email</label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-3 bg-muted/30 border border-border/60 rounded-xl focus:outline-none focus:ring-2 focus:ring-primary/50 focus:border-primary transition-all"
                placeholder="your.email@example.com"
              />
            </div>

            <div>
              <label for="referralType" class="block text-sm font-medium text-foreground mb-2">Referral Type</label>
              <select
                id="referralType"
                name="referralType"
                required
                class="w-full px-4 py-3 bg-muted/30 border border-border/60 rounded-xl focus:outline-none focus:ring-2 focus:ring-primary/50 focus:border-primary transition-all appearance-none"
              >
                <option value="">Select referral type</option>
                <option value="professional">Professional</option>
                <option value="family">Family</option>
                <option value="self">Self-referral</option>
              </select>
            </div>

            <div>
              <label for="description" class="block text-sm font-medium text-foreground mb-2">Brief Description</label>
              <textarea
                id="description"
                name="description"
                rows="4"
                required
                class="w-full px-4 py-3 bg-muted/30 border border-border/60 rounded-xl focus:outline-none focus:ring-2 focus:ring-primary/50 focus:border-primary transition-all resize-none"
                placeholder="Please provide details about the support needs..."
              ></textarea>
            </div>

            <button
              type="submit"
              class="group w-full bg-primary hover:bg-primary/90 text-primary-foreground font-semibold py-4 px-6 rounded-xl shadow-lg shadow-primary/20 hover:shadow-xl hover:shadow-primary/30 transition-all flex items-center justify-center gap-2"
            >
              <Icon name="tabler:send" class="w-5 h-5" />
              Submit Referral
              <Icon name="tabler:arrow-right" class="w-5 h-5 transform group-hover:translate-x-1 transition-transform" />
            </button>

            <div class="text-center text-sm text-muted-foreground pt-2">
              Or call us on <a href="tel:01158450220" class="text-primary hover:underline font-medium">0115 845 0220</a>
            </div>
          </form>
        </div>
        
        {/* Image side */}
        <div class="relative lg:sticky lg:top-24 hidden lg:block">
          <div class="relative aspect-[3/4] rounded-2xl overflow-hidden shadow-2xl shadow-primary/10">
            <img 
              src="https://images.unsplash.com/photo-1573497019940-1c28c88b4f3e?auto=format&fit=crop&w=800&q=80" 
              alt="Care team ready to help"
              class="w-full h-full object-cover"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/50 via-transparent to-transparent"></div>
            
            {/* Overlay content */}
            <div class="absolute bottom-8 left-8 right-8">
              <div class="bg-white/95 backdrop-blur-sm rounded-xl p-6 shadow-lg border border-white/20">
                <p class="text-foreground font-medium mb-2">"We aim to respond to all referrals within 24 hours"</p>
                <p class="text-sm text-muted-foreground">— Our commitment to you</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <ContactSection
    heading="Need Help With a Referral?"
    intro="Our team is available to walk you through the referral process and answer any questions."
    phoneLabel="0115 845 0220"
    phoneHref="tel:01158450220"
    address="Nottingham, Nottinghamshire"
  />
</SiteLayout>

---
import { Image } from 'astro:assets';
import Icon from './Icon.astro';
import heroBg from '@assets/images/hero-bg.jpg';
import { careProfileConfig } from '@/config/site';

interface Props {
  heading: string;
  subheading?: string;
  primaryCtaText?: string;
  primaryCtaHref?: string;
  secondaryCtaText?: string;
  secondaryCtaHref?: string;
  imageSrc?: ImageMetadata;
  imageAlt?: string;
  socialProofTitle?: string;
  socialProofSubtitle?: string;
  socialProofCountLabel?: string;
  profileContent?: {
    'supported-living'?: { heading?: string; subheading?: string };
    'dom-care'?: { heading?: string; subheading?: string };
  };
}

const {
  heading,
  subheading,
  primaryCtaText = "Get in Touch",
  primaryCtaHref = "/contact",
  secondaryCtaText,
  secondaryCtaHref,
  imageSrc = heroBg,
  imageAlt = "[Descriptive alt text]",
  socialProofTitle = "[Social Proof Title]",
  socialProofSubtitle = "[Social proof subtitle]",
  socialProofCountLabel = "[+X]",
  profileContent = {},
} = Astro.props as Props;

const profileRootId = `care-profile-content-${Math.random().toString(36).slice(2, 10)}`;
const { defaultProfile } = careProfileConfig;
---

<section id={profileRootId} class="relative bg-primary py-12 lg:py-2 overflow-hidden" data-care-profile-content>
  <div class="absolute inset-0 bg-[url('/grid-pattern.svg')] opacity-10"></div>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <div class="text-center lg:text-left">
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-primary-foreground mb-6 tracking-tight" data-care-field="heading">
          <Fragment set:html={heading} />
        </h1>
        {subheading && (
          <p class="text-xl text-primary-foreground/90 max-w-2xl mx-auto lg:mx-0 mb-10 leading-relaxed" data-care-field="subheading">
            {subheading}
          </p>
        )}
        <div class="flex flex-wrap justify-center lg:justify-start gap-4">
          <a href={primaryCtaHref} class="bg-white text-primary font-semibold py-3 px-8 rounded-full hover:bg-accent hover:text-accent-foreground transition-colors duration-300 shadow-lg">
            {primaryCtaText}
          </a>
          {secondaryCtaText && secondaryCtaHref && (
            <a href={secondaryCtaHref} class="bg-transparent border-2 border-white text-white font-semibold py-3 px-8 rounded-full hover:bg-white/10 transition-colors duration-300">
              {secondaryCtaText}
            </a>
          )}
        </div>
      </div>
      
      {/* Visual Column - Supports slot or default image */}
      <div class="relative items-center justify-center lg:h-[640px] w-full hidden lg:flex animate-fade-in-left delay-300">
        {Astro.slots.has('visual') ? (
          <slot name="visual" />
        ) : (
          <>
            <div class="absolute inset-0 h-5/6 m-auto bg-gradient-to-tr from-white/10 to-transparent rounded-[2rem] transform rotate-3"></div>
            <Image
              src={imageSrc}
              alt={imageAlt}
              class="relative rounded-[2rem] shadow-2xl object-cover w-full h-5/6 transform -rotate-3 transition-transform hover:rotate-0 duration-700"
              loading="eager"
            />
            
            {/* Floating Card */}
            <div class="absolute bottom-12 -left-12 bg-white/90 backdrop-blur-md p-6 rounded-2xl shadow-xl max-w-sm border border-white/20 animate-bounce-slow">
              <div class="flex items-center gap-4 mb-3">
                <div class="h-10 w-10 rounded-full bg-green-100 flex items-center justify-center text-green-600">
                  <Icon name="tabler:check" class="h-6 w-6" />
                </div>
                <div class="min-w-0">
                  <p class="font-semibold text-foreground leading-tight break-words">{socialProofTitle}</p>
                  <p class="text-xs text-muted-foreground leading-snug break-words">{socialProofSubtitle}</p>
                </div>
              </div>
              <div class="flex items-center justify-between gap-4">
                <div class="flex -space-x-2 shrink-0">
                  {[1, 2, 3, 4].map((i) => (
                    <img
                      class="inline-block h-8 w-8 rounded-full ring-2 ring-white"
                      src={`https://randomuser.me/api/portraits/women/${i + 40}.jpg`}
                      alt=""
                      onerror="this.onerror=null; this.src='https://ui-avatars.com/api/?name=User&background=e5e7eb&color=6b7280&size=128';"
                    />
                  ))}
                </div>
                <p class="text-sm font-semibold text-foreground text-right leading-tight break-words">
                  {socialProofCountLabel}
                </p>
              </div>
            </div>
          </>
        )}
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes fade-in-left {
    from {
      opacity: 0;
      transform: translateX(20px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }
  
  @keyframes bounce-slow {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  .animate-fade-in-left {
    animation: fade-in-left 1s ease-out forwards;
    opacity: 0;
  }
  
  .animate-bounce-slow {
    animation: bounce-slow 4s infinite ease-in-out;
  }

  .delay-300 { animation-delay: 300ms; }
</style>

<script is:inline define:vars={{ profileContent, profileRootId, defaultProfile }}>
  (() => {
    const root = document.getElementById(profileRootId);
    if (!root || !profileContent) return;

    const apply = (profile) => {
      const data = profileContent[profile];
      if (!data) return;
      const headingNode = root.querySelector('[data-care-field="heading"]');
      const subheadingNode = root.querySelector('[data-care-field="subheading"]');
      if (headingNode && data.heading) headingNode.innerHTML = data.heading;
      if (subheadingNode && data.subheading) subheadingNode.textContent = data.subheading;
    };

    apply(document.documentElement.dataset.careProfile || defaultProfile);
    window.addEventListener('care-profile-change', (event) => {
      apply(event.detail?.profile || defaultProfile);
    });
  })();
</script>

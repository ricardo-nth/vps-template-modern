---
import Icon from './Icon.astro';

interface Props {
  heading?: string;
  intro?: string;
  phoneLabel?: string;
  phoneHref?: string;
  emailLabel?: string;
  emailHref?: string;
  emailButtonText?: string;
  address?: string;
  officeTitle?: string;
  officeDirectionsText?: string;
  officeDirectionsHref?: string;
  hoursTitle?: string;
  officeHours?: { day: string; time: string }[];
  hoursNote?: string;
}

const {
  heading = "Start your journey today",
  intro = "[Brief description of how you help clients. Focus on reassurance and next steps.]",
  phoneLabel = "[Your Phone]",
  phoneHref = "tel:[Your Phone]",
  emailLabel = "[Your Email]",
  emailHref = "mailto:[Your Email]",
  emailButtonText = "Email Us",
  address = "[Your City, Region]",
  officeTitle = "Head Office",
  officeDirectionsText = "Get Directions",
  officeDirectionsHref = "#",
  hoursTitle = "Office Hours",
  officeHours = [
    { day: 'Monday - Friday', time: '9:00 AM - 6:00 PM' },
    { day: 'Saturday', time: '10:00 AM - 4:00 PM' },
    { day: 'Sunday', time: 'Closed' },
  ],
  hoursNote = '* Emergency support available 24/7 for existing clients',
} = Astro.props as Props;
---

<section class="relative bg-primary py-24 lg:py-32 overflow-hidden" id="contact">
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-10">
    <svg class="h-full w-full" viewBox="0 0 100 100" preserveAspectRatio="none">
      <path d="M0 100 C 20 0 50 0 100 100 Z" fill="white" />
    </svg>
  </div>

  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid lg:grid-cols-2 gap-16 items-center">
      <!-- Text Content -->
      <div class="text-center lg:text-left">
        <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-white tracking-tight text-balance mb-6">
          {heading}
        </h2>
        <p class="text-lg text-primary-foreground/90 text-balance leading-relaxed mb-10">
          {intro}
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
          <a
            href={phoneHref}
            class="inline-flex items-center justify-center gap-2 rounded-full bg-white px-8 py-4 text-lg font-bold text-primary shadow-lg transition-all hover:bg-gray-50 hover:scale-105 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-white focus-visible:ring-offset-2 focus-visible:ring-offset-primary"
          >
            <Icon name="tabler:phone" size="24" />
            Call: {phoneLabel}
          </a>
          <a
            href={emailHref}
            class="inline-flex items-center justify-center gap-2 rounded-full bg-primary-foreground/10 border border-white/30 px-8 py-4 text-lg font-semibold text-white backdrop-blur-sm transition-all hover:bg-white/20 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-white focus-visible:ring-offset-2 focus-visible:ring-offset-primary"
          >
            <Icon name="tabler:mail" size="24" />
            {emailButtonText}
          </a>
        </div>
      </div>

      <!-- Contact Cards -->
      <div class="grid gap-6">
        <!-- Office Card -->
        <div class="bg-white/10 backdrop-blur-md border border-white/20 rounded-2xl p-8 text-white">
          <div class="flex items-start gap-4">
            <div class="p-3 bg-white/20 rounded-lg">
              <Icon name="tabler:map-pin" size="24" class="text-primary" />
            </div>
            <div>
              <h3 class="text-xl font-bold mb-2">{officeTitle}</h3>
              <p class="text-primary-foreground/80 leading-relaxed">
                {address}
              </p>
              <a href={officeDirectionsHref} class="inline-block mt-4 text-sm font-semibold border-b border-white/40 hover:border-white transition-colors">
                {officeDirectionsText} &rarr;
              </a>
            </div>
          </div>
        </div>

        <!-- Hours Card -->
        <div class="bg-white rounded-2xl p-8 shadow-xl text-foreground">
          <div class="flex items-start gap-4">
            <div class="p-3 bg-primary/10 rounded-lg">
              <Icon name="tabler:clock-hour-4" size="24" class="text-primary" />
            </div>
            <div>
              <h3 class="text-xl font-bold mb-2">{hoursTitle}</h3>
              <ul class="space-y-2 text-muted-foreground">
                {officeHours.map((slot) => (
                  <li class="flex justify-between gap-8">
                    <span>{slot.day}</span>
                    <span class="font-medium text-foreground">{slot.time}</span>
                  </li>
                ))}
              </ul>
              <p class="mt-4 text-xs text-muted-foreground bg-muted p-2 rounded">
                {hoursNote}
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

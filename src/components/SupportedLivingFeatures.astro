---
import Icon from './Icon.astro';

interface Feature {
  icon: string;
  title: string;
  description: string;
}

interface Props {
  heading?: string;
  subheading?: string;
  features?: Feature[];
}

const {
  heading = "Supported Living Done Right",
  subheading = "Modern, compliant care that empowers independence while providing the safety net families trust.",
  features = [
    {
      icon: "tabler:home",
      title: "Independent Living",
      description: "Private tenancies with personalized support - true independence with professional backup."
    },
    {
      icon: "tabler:user-check",
      title: "Personalized Plans",
      description: "Individual care plans co-created with service users, families, and CQC best practices."
    },
    {
      icon: "tabler:shield-check",
      title: "CQC Outstanding",
      description: "Proven regulatory excellence across all Key Lines of Enquiry (KLOEs)."
    },
    {
      icon: "tabler:clock-24",
      title: "24/7 Response",
      description: "Round-the-clock support team ensuring peace of mind for service users and families."
    },
    {
      icon: "tabler:heart-handshake",
      title: "Dignified Care",
      description: "Compassionate, person-centred approach respecting individual choices and dignity."
    },
    {
      icon: "tabler:trending-up",
      title: "Progress Tracking",
      description: "Data-driven outcomes with regular reviews and continuous improvement."
    }
  ]
} = Astro.props as Props;
---

<section class="bg-background py-24 lg:py-32" id="features">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-20">
      <p class="text-xs font-semibold uppercase tracking-[0.2em] text-primary mb-4">Features</p>
      <h2 class="text-4xl lg:text-5xl font-bold text-foreground mb-6 tracking-tight">
        {heading}
      </h2>
      <p class="mx-auto max-w-3xl text-xl text-muted-foreground">
        {subheading}
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-5">
      {features.map((feature, index) => (
        <div class="group relative overflow-hidden rounded-xl bg-card p-8 border border-border/70 hover:border-primary/30 transition-all duration-500 hover:-translate-y-1.5">
          {/* Multi-layer shadow effect */}
          <div class="absolute -inset-px bg-gradient-to-br from-primary/10 via-transparent to-accent/5 rounded-xl opacity-0 group-hover:opacity-100 transition-opacity duration-500 -z-10 blur-sm"></div>
          <div class="absolute inset-0 shadow-[inset_0_1px_0_rgba(255,255,255,0.5)] rounded-xl pointer-events-none"></div>
          
          {/* Subtle background gradient on hover */}
          <div class="absolute inset-0 bg-gradient-to-b from-primary/[0.03] to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
          
          {/* Top accent line */}
          <div class="absolute top-0 left-8 right-8 h-px bg-gradient-to-r from-transparent via-primary/30 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
          
          <div class="relative flex flex-col items-center text-center h-full">
            {/* Corporate icon container */}
            <div class="inline-flex h-16 w-16 items-center justify-center rounded-xl bg-primary/10 text-primary mb-5 ring-1 ring-primary/20 group-hover:bg-primary group-hover:text-primary-foreground group-hover:ring-primary/40 group-hover:shadow-lg group-hover:shadow-primary/20 transition-all duration-300">
              <Icon name={feature.icon} class="h-7 w-7" />
            </div>
            
            <h3 class="text-lg font-semibold text-foreground mb-3 group-hover:text-primary transition-colors duration-300">
              {feature.title}
            </h3>
            <p class="text-sm text-muted-foreground leading-relaxed flex-1">
              {feature.description}
            </p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
---
import Icon from './Icon.astro';

interface ContactOption {
  icon: string;
  title: string;
  value: string;
  href: string;
  description?: string;
  primary?: boolean;
}

interface Props {
  options?: ContactOption[];
  variant?: 'hero' | 'grid';
}

const {
  variant = 'grid',
  options = [
    {
      icon: "tabler:phone",
      title: "Call Us",
      value: "0115 845 0220 ext 2535",
      href: "tel:01158450220",
      description: "Monday - Friday, 9am - 5pm",
      primary: true
    },
    {
      icon: "tabler:mail",
      title: "Email Us",
      value: "help@teamcaresupport.com",
      href: "mailto:help@teamcaresupport.com",
      description: "We'll reply within 24 hours"
    },
    {
      icon: "tabler:alert-circle",
      title: "Complaints",
      value: "kerry@teamcarecompliance.org.uk",
      href: "mailto:kerry@teamcarecompliance.org.uk",
      description: "Formal complaints procedure"
    }
  ]
} = Astro.props as Props;
---

{variant === 'hero' ? (
  <div class="grid gap-3">
    {options.map((option) => (
      <a 
        href={option.href}
        class={`group relative flex items-center gap-4 p-4 rounded-xl border transition-all duration-300 overflow-hidden
          ${option.primary 
            ? 'bg-white/15 border-white/30 hover:bg-white/25 text-white shadow-lg shadow-black/5' 
            : 'bg-white/5 border-white/10 hover:bg-white/10 text-white/90'
          }`}
      >
        {/* Hover gradient */}
        <div class="absolute inset-0 bg-gradient-to-r from-white/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
        
        <div class={`relative flex items-center justify-center w-11 h-11 rounded-lg shrink-0 transition-all duration-300
          ${option.primary ? 'bg-white text-primary shadow-md' : 'bg-white/15 text-white ring-1 ring-white/20'}`}>
          <Icon name={option.icon} class="w-5 h-5" />
        </div>
        <div class="relative">
          <p class="font-medium text-xs uppercase tracking-wider opacity-70">{option.title}</p>
          <p class="font-semibold text-base">{option.value}</p>
        </div>
        <Icon name="tabler:arrow-right" class="w-4 h-4 ml-auto opacity-0 -translate-x-2 group-hover:opacity-100 group-hover:translate-x-0 transition-all duration-300" />
      </a>
    ))}
  </div>
) : (
  <div class="grid md:grid-cols-3 gap-6">
    {options.map((option) => (
      <a 
        href={option.href}
        class="group relative flex flex-col items-center text-center p-8 rounded-xl bg-card border border-border/80 hover:border-primary/40 transition-all duration-300 hover:-translate-y-1 overflow-hidden"
      >
        {/* Subtle background glow on hover */}
        <div class="absolute inset-0 bg-gradient-to-b from-primary/5 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
        
        {/* Top accent line */}
        <div class="absolute top-0 left-1/2 -translate-x-1/2 w-0 h-0.5 bg-primary group-hover:w-1/3 transition-all duration-300 rounded-full"></div>
        
        <div class="relative w-14 h-14 rounded-xl bg-primary/10 text-primary flex items-center justify-center mb-5 group-hover:bg-primary group-hover:text-primary-foreground transition-all duration-300 ring-1 ring-primary/20 group-hover:ring-primary/40 group-hover:shadow-lg group-hover:shadow-primary/20">
          <Icon name={option.icon} class="w-6 h-6" />
        </div>
        <h3 class="relative text-lg font-semibold text-foreground mb-1">{option.title}</h3>
        <p class="relative text-base font-medium text-primary mb-2">{option.value}</p>
        {option.description && (
          <p class="relative text-sm text-muted-foreground">{option.description}</p>
        )}
      </a>
    ))}
  </div>
)}
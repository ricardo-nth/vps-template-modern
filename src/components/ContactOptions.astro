---
import Icon from './Icon.astro';

interface ContactOption {
  icon: string;
  title: string;
  value: string;
  href: string;
  description?: string;
  primary?: boolean;
}

interface Props {
  options?: ContactOption[];
  variant?: 'hero' | 'grid';
}

const {
  variant = 'grid',
  options = [
    {
      icon: "tabler:phone",
      title: "Call Us",
      value: "0208 555 5555",
      href: "tel:02085555555",
      description: "Available 24/7 for support",
      primary: true
    },
    {
      icon: "tabler:brand-whatsapp",
      title: "WhatsApp",
      value: "Chat with us",
      href: "https://wa.me/442085555555",
      description: "Quick responses 9am-5pm"
    },
    {
      icon: "tabler:mail",
      title: "Email Us",
      value: "care@healthcare.com",
      href: "mailto:care@healthcare.com",
      description: "We'll reply within 24 hours"
    }
  ]
} = Astro.props as Props;
---

{variant === 'hero' ? (
  <div class="grid gap-4 sm:gap-6">
    {options.map((option) => (
      <a 
        href={option.href}
        class={`flex items-center gap-4 p-4 rounded-xl border transition-all duration-300 group
          ${option.primary 
            ? 'bg-white/10 border-white/20 hover:bg-white/20 text-white' 
            : 'bg-white/5 border-white/10 hover:bg-white/10 text-white/90'
          }`}
      >
        <div class={`flex items-center justify-center w-12 h-12 rounded-lg shrink-0 transition-colors
          ${option.primary ? 'bg-white text-primary' : 'bg-white/10 text-white'}`}>
          <Icon name={option.icon} class="w-6 h-6" />
        </div>
        <div>
          <p class="font-medium text-sm opacity-80">{option.title}</p>
          <p class="font-bold text-lg">{option.value}</p>
        </div>
        <Icon name="tabler:arrow-right" class="w-5 h-5 ml-auto opacity-0 -translate-x-2 group-hover:opacity-100 group-hover:translate-x-0 transition-all" />
      </a>
    ))}
  </div>
) : (
  <div class="grid md:grid-cols-3 gap-8">
    {options.map((option) => (
      <a 
        href={option.href}
        class="group flex flex-col items-center text-center p-8 rounded-2xl bg-card border border-border hover:border-primary/50 hover:shadow-lg transition-all duration-300 hover:-translate-y-1"
      >
        <div class="w-16 h-16 rounded-2xl bg-primary/10 text-primary flex items-center justify-center mb-6 group-hover:scale-110 group-hover:bg-primary group-hover:text-primary-foreground transition-all duration-300">
          <Icon name={option.icon} class="w-8 h-8" />
        </div>
        <h3 class="text-xl font-bold text-foreground mb-2">{option.title}</h3>
        <p class="text-lg font-medium text-primary mb-2">{option.value}</p>
        {option.description && (
          <p class="text-sm text-muted-foreground">{option.description}</p>
        )}
      </a>
    ))}
  </div>
)}
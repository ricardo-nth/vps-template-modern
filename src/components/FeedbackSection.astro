---
import Icon from './Icon.astro';

interface Props {
  heading?: string;
  intro?: string;
}

const {
  heading = "Compliments & Complaints",
  intro = "We are committed to providing the highest quality of care. Your feedback helps us improve and ensures we maintain our high standards. We take all feedback seriously and have a transparent process for handling both compliments and complaints."
} = Astro.props as Props;
---

<section class="py-24 bg-background" id="feedback">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <p class="text-xs font-semibold uppercase tracking-[0.2em] text-primary mb-4">Your Voice</p>
    <h2 class="text-3xl sm:text-4xl font-bold text-foreground mb-6 tracking-tight">{heading}</h2>
    <p class="text-lg text-muted-foreground mb-12 leading-relaxed max-w-2xl mx-auto">
      {intro}
    </p>

    <div class="grid md:grid-cols-2 gap-6">
      {/* Compliments */}
      <div class="group relative p-8 rounded-xl bg-card border border-border/70 text-left hover:border-primary/30 transition-all duration-500 hover:-translate-y-1">
        <div class="absolute -inset-px bg-gradient-to-br from-primary/5 to-transparent rounded-xl opacity-0 group-hover:opacity-100 transition-opacity -z-10"></div>
        
        <div class="flex items-center gap-4 mb-4">
          <div class="inline-flex h-11 w-11 items-center justify-center rounded-xl bg-green-100 text-green-600 ring-1 ring-green-200">
            <Icon name="tabler:thumb-up" class="w-5 h-5" />
          </div>
          <h3 class="text-xl font-semibold text-foreground">Leave a Compliment</h3>
        </div>
        <p class="text-muted-foreground mb-6 text-sm leading-relaxed">
          Has a member of our team gone above and beyond? We'd love to hear about it so we can recognize their dedication.
        </p>
        <a href="mailto:help@teamcaresupport.com?subject=Compliment" class="group/link inline-flex items-center gap-2 text-primary font-semibold hover:text-primary/80 transition-colors">
          Send Compliment
          <Icon name="tabler:arrow-right" class="w-4 h-4 transform group-hover/link:translate-x-1 transition-transform" />
        </a>
      </div>

      {/* Complaints */}
      <div class="group relative p-8 rounded-xl bg-card border border-border/70 text-left hover:border-primary/30 transition-all duration-500 hover:-translate-y-1">
        <div class="absolute -inset-px bg-gradient-to-br from-primary/5 to-transparent rounded-xl opacity-0 group-hover:opacity-100 transition-opacity -z-10"></div>
        
        <div class="flex items-center gap-4 mb-4">
          <div class="inline-flex h-11 w-11 items-center justify-center rounded-xl bg-red-100 text-red-600 ring-1 ring-red-200">
            <Icon name="tabler:alert-circle" class="w-5 h-5" />
          </div>
          <h3 class="text-xl font-semibold text-foreground">Raise a Concern</h3>
        </div>
        <p class="text-muted-foreground mb-6 text-sm leading-relaxed">
          If you're not happy with any aspect of our service, please let us know. We have a formal complaints procedure to ensure fair resolution.
        </p>
        <a href="mailto:kerry@teamcarecompliance.org.uk?subject=Complaint" class="group/link inline-flex items-center gap-2 text-primary font-semibold hover:text-primary/80 transition-colors">
          File Complaint
          <Icon name="tabler:arrow-right" class="w-4 h-4 transform group-hover/link:translate-x-1 transition-transform" />
        </a>
      </div>
    </div>

    <div class="mt-12 p-6 bg-card rounded-xl border border-border/60 inline-block">
      <p class="text-sm text-muted-foreground">
        You can also contact the Care Quality Commission (CQC) directly if you have concerns about your care.
        <a href="https://www.cqc.org.uk/contact-us" target="_blank" rel="noopener noreferrer" class="text-primary hover:underline ml-1">Visit CQC Website</a>
      </p>
    </div>
  </div>
</section>
---
import { Image } from 'astro:assets';
import Icon from '@components/Icon.astro';
import teamPortrait from '@assets/images/team-portrait.jpg';

interface TeamMember {
  name: string;
  role: string;
  description: string;
  image: ImageMetadata;
  imageAlt?: string;
  credentials?: string;
}

interface Props {
  heading?: string;
  intro?: string;
  members?: TeamMember[];
}

const {
  heading = "Meet Our Team",
  intro = "[Brief description of your team and their expertise]",
  members = [
    {
      name: "[Team Member 1]",
      role: "[Role/Title]",
      credentials: "[Credentials]",
      description: "[Brief bio describing their experience and responsibilities]",
      image: teamPortrait,
      imageAlt: "[Team member name]",
    },
    {
      name: "[Team Member 2]",
      role: "[Role/Title]",
      credentials: "[Credentials]",
      description: "[Brief bio describing their experience and responsibilities]",
      image: teamPortrait,
      imageAlt: "[Team member name]",
    },
    {
      name: "[Team Member 3]",
      role: "[Role/Title]",
      credentials: "[Credentials]",
      description: "[Brief bio describing their experience and responsibilities]",
      image: teamPortrait,
      imageAlt: "[Team member name]",
    },
  ],
} = Astro.props as Props;
---

<section class="bg-background py-24 lg:py-32" id="team">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="max-w-3xl mx-auto text-center mb-16">
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-foreground tracking-tight text-balance mb-6">
        {heading}
      </h2>
      <p class="text-lg text-muted-foreground text-balance leading-relaxed">
        {intro}
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 lg:gap-12">
      {members.map((member) => (
        <div class="group relative">
          <!-- Image Container -->
          <div class="relative aspect-[3/3.2] overflow-hidden rounded-2xl bg-muted mb-6">
            <Image
              src={member.image}
              alt={member.imageAlt || member.name}
              class="h-full w-full object-cover transition-all duration-700 filter grayscale group-hover:grayscale-0 group-hover:scale-105"
              loading="lazy"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
            
            <!-- Social/Contact Overlay (Optional) -->
            <div class="absolute bottom-4 left-4 right-4 translate-y-full group-hover:translate-y-0 transition-transform duration-500">
              <div class="flex justify-center gap-2">
                <a href="#" class="p-2 bg-white/20 backdrop-blur-md rounded-full text-white hover:bg-white hover:text-primary transition-colors" aria-label={`${member.name}'s LinkedIn profile (coming soon)`}>
                  <span class="sr-only">LinkedIn</span>
                  <Icon name="tabler:brand-linkedin" size={20} />
                </a>
              </div>
            </div>
          </div>

          <!-- Content -->
          <div class="text-center">
            <h3 class="text-xl font-bold text-foreground mb-1 group-hover:text-primary transition-colors">
              {member.name}
            </h3>
            <p class="text-sm font-medium text-primary uppercase tracking-wider mb-3">
              {member.role} <span class="text-muted-foreground normal-case font-normal">| {member.credentials}</span>
            </p>
            <p class="text-muted-foreground leading-relaxed">
              {member.description}
            </p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

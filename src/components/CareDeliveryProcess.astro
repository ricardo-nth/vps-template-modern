---
import Icon from './Icon.astro';

interface Step {
  number: number;
  icon: string;
  title: string;
  description: string;
}

interface Props {
  heading?: string;
  subheading?: string;
  steps?: Step[];
}

const {
  heading = "Our Proven Delivery Process",
  subheading = "Streamlined from assessment to excellence - designed for CQC compliance and exceptional outcomes.",
  steps = [
    {
      number: 1,
      icon: "tabler:clipboard-search",
      title: "Comprehensive Assessment",
      description: "In-depth needs analysis with service user, family, and clinical input. CQC-aligned risk evaluation."
    },
    {
      number: 2,
      icon: "tabler:file-text",
      title: "Custom Care Plan",
      description: "Co-created, SMART-goal based plan approved by all stakeholders. Regular review schedule established."
    },
    {
      number: 3,
      icon: "tabler:users",
      title: "Expert Implementation",
      description: "Hand-picked, DBS-checked team with specialist training. 24/7 coordination and escalation protocols."
    },
    {
      number: 4,
      icon: "tabler:refresh",
      title: "Continuous Excellence",
      description: "Weekly check-ins, monthly audits, quarterly CQC-style reviews. Adaptive improvements."
    }
  ]
} = Astro.props as Props;
---

<section class="relative py-24 lg:py-32 overflow-hidden bg-muted/30">
  <!-- Background Elements -->
  <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_bottom,_var(--tw-gradient-stops))] from-primary/5 via-background to-background"></div>
  
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center max-w-3xl mx-auto mb-20">
      <div class="inline-flex items-center rounded-full border border-primary/20 bg-primary/5 px-3 py-1 text-sm font-medium text-primary mb-6">
        <span class="flex h-2 w-2 rounded-full bg-primary mr-2"></span>
        The Journey
      </div>
      <h2 class="text-4xl lg:text-5xl font-bold tracking-tight text-foreground mb-6">
        {heading}
      </h2>
      <p class="text-xl text-muted-foreground leading-relaxed">
        {subheading}
      </p>
    </div>

    <div class="relative grid md:grid-cols-2 lg:grid-cols-4 gap-8">
      {steps.map((step, index) => (
        <div class="relative group">
          <!-- Connector Line (Desktop only, not on last item) -->
          {index !== steps.length - 1 && (
            <div class="hidden lg:block absolute top-8 left-1/2 w-full h-0.5 bg-gradient-to-r from-primary/20 to-transparent z-0"></div>
          )}
          
          <div class="relative z-10 flex flex-col items-center text-center">
            <!-- Number & Icon Container -->
            <div class="relative mb-8">
              <div class="w-16 h-16 rounded-2xl bg-card border border-border shadow-lg flex items-center justify-center group-hover:scale-110 group-hover:border-primary/50 transition-all duration-500 z-10 relative">
                <Icon name={step.icon} class="w-8 h-8 text-primary" />
              </div>
              <!-- Number Badge -->
              <div class="absolute -top-3 -right-3 w-8 h-8 rounded-full bg-primary text-primary-foreground flex items-center justify-center text-sm font-bold shadow-md ring-4 ring-background z-20">
                {step.number}
              </div>
            </div>

            <!-- Content -->
            <div class="bg-card/50 backdrop-blur-sm border border-border/50 rounded-2xl p-6 hover:bg-card hover:shadow-xl hover:shadow-primary/5 transition-all duration-500 w-full h-full">
              <h3 class="text-lg font-bold text-foreground mb-3 group-hover:text-primary transition-colors">
                {step.title}
              </h3>
              <p class="text-sm text-muted-foreground leading-relaxed">
                {step.description}
              </p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
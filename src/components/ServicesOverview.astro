---
import Icon from './Icon.astro';

interface Service {
  title: string;
  description: string;
  href?: string;
  imageSrc?: string;
  imageAlt?: string;
  icon?: string;
}

interface Props {
  eyebrow?: string;
  heading?: string;
  intro?: string;
  ctaText?: string;
  ctaHref?: string;
  services?: Service[];
}

const {
  eyebrow = "Our Services",
  heading = "[Your Services Headline]",
  intro = "[Brief overview of your services and the value you provide to clients]",
  ctaText = "View All Services",
  ctaHref = "/services",
  services = [
    {
      title: "[Service 1]",
      description: "[Brief description of this service and its benefits]",
      href: "#service-1",
      imageSrc: "https://images.unsplash.com/photo-1576765611791-374770ac4db8?auto=format&fit=crop&w=800&q=80",
      imageAlt: "[Descriptive alt text]",
    },
    {
      title: "[Service 2]",
      description: "[Brief description of this service and its benefits]",
      href: "#service-2",
      imageSrc: "https://images.unsplash.com/photo-1581594693702-fbdc51b2763b?auto=format&fit=crop&w=800&q=80",
      imageAlt: "[Descriptive alt text]",
    },
    {
      title: "[Service 3]",
      description: "[Brief description of this service and its benefits]",
      href: "#service-3",
      imageSrc: "https://images.unsplash.com/photo-1559839734-2b71ea197ec2?auto=format&fit=crop&w=800&q=80",
      imageAlt: "[Descriptive alt text]",
    },
    {
      title: "[Service 4]",
      description: "[Brief description of this service and its benefits]",
      href: "#service-4",
      imageSrc: "https://images.unsplash.com/photo-1631815589968-fdb09a223b1e?auto=format&fit=crop&w=800&q=80",
      imageAlt: "[Descriptive alt text]",
    },
    {
      title: "[Service 5]",
      description: "[Brief description of this service and its benefits]",
      href: "#service-5",
      imageSrc: "https://images.unsplash.com/photo-1516549655169-df83a0774514?auto=format&fit=crop&w=800&q=80",
      imageAlt: "[Descriptive alt text]",
    },
  ],
} = Astro.props as Props;
---

<section class="bg-background py-24 lg:py-32" id="services">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="flex flex-col md:flex-row md:items-end justify-between gap-8 mb-16">
      <div class="max-w-2xl">
        {eyebrow && (
          <p class="text-xs font-semibold uppercase tracking-[0.2em] text-primary mb-4">
            {eyebrow}
          </p>
        )}
        <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-foreground tracking-tight text-balance">
          {heading}
        </h2>
        <p class="mt-6 text-lg text-muted-foreground text-balance leading-relaxed">
          {intro}
        </p>
      </div>

      {ctaText && (
        <div class="hidden md:block">
          <a
            href={ctaHref}
            class="group inline-flex items-center gap-2 text-primary font-semibold hover:text-primary/80 transition-colors"
          >
            {ctaText}
            <Icon name="tabler:arrow-right" class="h-5 w-5 transform transition-transform group-hover:translate-x-1" />
          </a>
        </div>
      )}
    </div>

    <!-- Premium Bento Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-5 lg:gap-6">
      {services.map((service, index) => (
        <a
          href={service.href || "#"}
          class={`group relative overflow-hidden rounded-2xl bg-card transition-all duration-500 hover:-translate-y-2 ${
            index === 0 ? "md:col-span-2 lg:col-span-2 aspect-[2/1]" : "aspect-square"
          }`}
        >
          <!-- Layered shadow effect -->
          <div class="absolute -inset-0.5 bg-gradient-to-br from-primary/20 via-transparent to-accent/20 rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-500 blur-sm"></div>
          <div class="absolute inset-0 rounded-2xl ring-1 ring-inset ring-white/10 shadow-[0_2px_8px_-2px_rgba(0,0,0,0.08)] group-hover:shadow-[0_8px_32px_-8px_rgba(0,0,0,0.2),0_4px_16px_-4px_rgba(107,190,210,0.15)] transition-shadow duration-500"></div>
          
          <!-- Image Background -->
          <div class="absolute inset-0 rounded-2xl overflow-hidden">
            <img
              src={service.imageSrc}
              alt={service.imageAlt || service.title}
              class="h-full w-full object-cover transition-transform duration-700 group-hover:scale-105"
              onerror="this.onerror=null; this.src='https://images.unsplash.com/photo-1576091160399-112ba8d25d1d?auto=format&fit=crop&w=800&q=80'; this.alt='Healthcare service placeholder';"
            />
            <!-- Premium gradient overlay -->
            <div class="absolute inset-0 bg-gradient-to-t from-black/85 via-black/30 to-black/10 opacity-90 transition-opacity group-hover:opacity-75"></div>
            <!-- Subtle vignette -->
            <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_center,transparent_0%,rgba(0,0,0,0.4)_100%)] opacity-60"></div>
          </div>

          <!-- Content -->
          <div class="absolute inset-0 p-8 flex flex-col justify-end">
            <div class="transform transition-transform duration-500 translate-y-2 group-hover:translate-y-0">
              <!-- Accent line -->
              <div class="w-12 h-0.5 bg-accent mb-4 transform origin-left scale-x-0 group-hover:scale-x-100 transition-transform duration-500 delay-100"></div>
              
              <h3 class="text-2xl font-bold text-white mb-3 tracking-tight">
                {service.title}
              </h3>
              <p class="text-white/80 text-base leading-relaxed line-clamp-2 group-hover:line-clamp-none transition-all">
                {service.description}
              </p>
              
              <div class="mt-6 opacity-0 transform translate-y-3 transition-all duration-500 group-hover:opacity-100 group-hover:translate-y-0">
                <span class="inline-flex items-center gap-2 text-accent font-medium text-sm">
                  Learn more
                  <Icon name="tabler:arrow-right" class="h-4 w-4 transform group-hover:translate-x-1 transition-transform" />
                </span>
              </div>
            </div>
          </div>
          
          <!-- Corner accent -->
          <div class="absolute top-4 right-4 w-8 h-8 rounded-full bg-white/10 backdrop-blur-sm flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300">
            <Icon name="tabler:arrow-up-right" class="w-4 h-4 text-white" />
          </div>
        </a>
      ))}
    </div>

    <!-- Mobile CTA -->
    {ctaText && (
      <div class="mt-12 md:hidden text-center">
        <a
          href={ctaHref}
          class="inline-flex items-center justify-center rounded-full bg-primary px-8 py-3 text-base font-semibold text-primary-foreground shadow-lg transition-all hover:bg-primary/90"
        >
          {ctaText}
        </a>
      </div>
    )}
  </div>
</section>

---
/**
 * AboutUs.astro - About Us section component
 * 
 * Reusable component for displaying the About Us section with
 * company information, mission statement, and contact details.
 */

interface Props {
  eyebrow?: string;
  heading?: string;
  description?: string[];
  imageSrc?: string;
  imageAlt?: string;
  phoneLabel?: string;
  phoneHref?: string;
  sectionId?: string;
}

const {
  eyebrow = "About Us",
  heading = "Care That Makes a Real Difference",
  description = [
    "Team Care Support & Accommodation provides person-centred domiciliary care and supported living services across Nottinghamshire. We support adults with learning disabilities, autism, mental health conditions, and physical disabilities to live independently in their own homes.",
    "Our approach goes beyond traditional care. We match care workers to individuals based on shared interests and strengths, co-produce every care plan with the person at the centre, and focus on building real skills and confidence — not creating dependency.",
    "With over 28 years of combined experience in care services, our directors have built Team Care on a foundation of trust, empathy, and empowerment. We believe home care can be different, and we are proving it every day."
  ],
  imageSrc = "https://images.unsplash.com/photo-1584466977773-270f5fcd5864?auto=format&fit=crop&w=900&q=80",
  imageAlt = "Team Care Support person-centred approach to care",
  phoneLabel = "0115 845 0220",
  phoneHref = "tel:01158450220",
  sectionId = "about"
} = Astro.props;
---

<section class="bg-background py-24 lg:py-32" id={sectionId}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid lg:grid-cols-2 gap-16 items-center">
      <div class="relative order-2 lg:order-1">
        <div class="relative rounded-[2rem] overflow-hidden shadow-2xl aspect-square">
          <img
            src={imageSrc}
            alt={imageAlt}
            class="absolute inset-0 w-full h-full object-cover"
            onerror="this.onerror=null; this.src='https://images.unsplash.com/photo-1584466977773-270f5fcd5864?auto=format&fit=crop&w=900&q=80'; this.alt='About us image';"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-black/40 to-transparent"></div>
        </div>
        <!-- Decorative element -->
        <div class="absolute -bottom-8 -right-8 w-64 h-64 bg-primary/10 rounded-full blur-3xl -z-10"></div>
        <div class="absolute -top-8 -left-8 w-64 h-64 bg-secondary rounded-full blur-3xl -z-10"></div>
      </div>

      <div class="order-1 lg:order-2 space-y-8">
        <div>
          <p class="text-sm font-bold uppercase tracking-widest text-primary mb-3">{eyebrow}</p>
          <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-foreground tracking-tight text-balance">
            {heading}
          </h2>
        </div>
        
        <div class="space-y-6 text-lg text-muted-foreground leading-relaxed">
          {description.map((paragraph) => (
            <p set:html={paragraph}></p>
          ))}
        </div>

        <div class="pt-4">
          <a
            href={phoneHref}
            class="inline-flex items-center gap-2 text-primary font-semibold text-lg hover:text-primary/80 transition-colors group"
          >
            Need to know more? Call us: {phoneLabel}
            <span class="transform transition-transform group-hover:translate-x-1">→</span>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
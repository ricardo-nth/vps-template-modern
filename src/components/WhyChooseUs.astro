---
import Icon from './Icon.astro';

interface Point {
  title: string;
  description: string;
  iconName: string;
}

interface Props {
  eyebrow?: string;
  heading?: string;
  intro?: string;
  points?: Point[];
  imageSrc?: string;
  imageAlt?: string;
  ctaText?: string;
  ctaHref?: string;
  class?: string;
  id?: string;
}

const {
  eyebrow = "Why Team Care",
  heading = "The TEAM CARE Difference",
  intro = "Our values of Trust, Empathy, Accountability, Motivation, Collaboration, Attentiveness, Respect, and Empowerment are the foundation of everything we do.",
  imageSrc = "https://images.unsplash.com/photo-1584466977773-270f5fcd5864?auto=format&fit=crop&w=900&q=80",
  imageAlt = "Team Care values in action",
  ctaText = "About Us",
  ctaHref = "/about",
  class: className = "bg-background",
  id,
  points = [
    {
      title: "Person-Centred Always",
      description: "Every care plan is co-produced with the individual.",
      iconName: "tabler:heart-handshake"
    },
    {
      title: "Independence First",
      description: "We support people to move forward, not stay stuck.",
      iconName: "tabler:trending-up"
    },
    {
      title: "Matched by Interest",
      description: "Care workers paired by personality and shared interests.",
      iconName: "tabler:users-group"
    },
    {
      title: "Quality & Safety",
      description: "Robust safeguarding and CQC-aligned governance.",
      iconName: "tabler:shield-check"
    },
  ],
} = Astro.props as Props;
---

<section class={`py-24 lg:py-32 overflow-hidden ${className}`} id={id || "why-us"}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid lg:grid-cols-2 gap-16 items-center">
      <!-- Content Column -->
      <div class="order-2 lg:order-1">
        {eyebrow && (
          <p class="text-xs font-semibold uppercase tracking-[0.2em] text-primary mb-4">
            {eyebrow}
          </p>
        )}
        <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-foreground tracking-tight text-balance mb-6">
          {heading}
        </h2>
        <p class="text-lg text-muted-foreground text-balance leading-relaxed mb-12">
          {intro}
        </p>

        <!-- Corporate Feature Grid -->
        <div class="grid sm:grid-cols-2 gap-6 mb-10">
          {points.map((point) => (
            <div class="group relative p-6 rounded-xl bg-card/50 border border-border/50 hover:border-primary/30 hover:bg-card transition-all duration-300">
              <!-- Subtle hover glow -->
              <div class="absolute -inset-px bg-gradient-to-br from-primary/10 to-transparent rounded-xl opacity-0 group-hover:opacity-100 transition-opacity duration-300 -z-10"></div>
              
              <div class="flex items-start gap-4">
                <!-- Corporate icon treatment -->
                <div class="inline-flex h-10 w-10 shrink-0 items-center justify-center rounded-lg bg-primary/10 text-primary ring-1 ring-primary/20 group-hover:bg-primary group-hover:text-primary-foreground group-hover:ring-primary/40 transition-all duration-300">
                  <Icon name={point.iconName} size="20" />
                </div>
                <div>
                  <h3 class="text-base font-semibold text-foreground mb-1 group-hover:text-primary transition-colors">{point.title}</h3>
                  <p class="text-sm text-muted-foreground leading-relaxed">{point.description}</p>
                </div>
              </div>
            </div>
          ))}
        </div>

        {ctaText && ctaHref && (
          <div>
            <a
              href={ctaHref}
              class="inline-flex items-center gap-2 text-primary font-semibold text-lg hover:text-primary/80 transition-colors group"
            >
              {ctaText}
              <span class="transform transition-transform group-hover:translate-x-1">â†’</span>
            </a>
          </div>
        )}
      </div>

      <!-- Image Column -->
      <div class="order-1 lg:order-2 relative">
        <div class="relative rounded-2xl overflow-hidden shadow-[0_20px_60px_-15px_rgba(0,0,0,0.2)] aspect-[4/4] group">
          <img
            src={imageSrc}
            alt={imageAlt}
            class="absolute inset-0 w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
            onerror="this.onerror=null; this.src='https://images.unsplash.com/photo-1584466977773-270f5fcd5864?auto=format&fit=crop&w=900&q=80'; this.alt='Healthcare facility image';"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/20 to-transparent"></div>
          
          <!-- Premium Testimonial Card -->
          <div class="absolute bottom-6 left-6 right-6 bg-white/95 backdrop-blur-md p-6 rounded-xl border border-white/20 shadow-xl transform transition-transform duration-500 hover:-translate-y-1">
            <div class="flex gap-0.5 mb-3">
              {[1, 2, 3, 4, 5].map(() => (
                <Icon name="tabler:star" class="w-4 h-4 text-amber-400 fill-current" />
              ))}
            </div>
            <p class="text-foreground font-medium text-sm leading-relaxed mb-4">
              "The team genuinely care about the people they support. It feels like family, not just a service."
            </p>
            <div class="flex items-center gap-3">
              <div class="h-8 w-8 rounded-full bg-primary/15 flex items-center justify-center text-primary text-xs font-bold ring-1 ring-primary/20">
                TC
              </div>
              <div>
                <p class="text-sm font-semibold text-foreground">Family Member</p>
                <p class="text-xs text-muted-foreground">Supported Living Service</p>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Refined Decorative Elements -->
        <div class="absolute -top-8 -right-8 w-48 h-48 bg-primary/10 rounded-full blur-3xl -z-10"></div>
        <div class="absolute -bottom-8 -left-8 w-48 h-48 bg-accent/10 rounded-full blur-3xl -z-10"></div>
      </div>
    </div>
  </div>
</section>

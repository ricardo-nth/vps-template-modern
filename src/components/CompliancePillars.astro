---
import Icon from './Icon.astro';

interface Pillar {
  icon: string;
  title: string;
  description: string;
  cqcEvidence: string;
}

interface Props {
  heading?: string;
  subheading?: string;
  pillars?: Pillar[];
}

const {
  heading = "CQC Outstanding Across All 5 Pillars",
  subheading = "Regulators trust our evidence-based approach. Service users love our outcomes. Families choose us for peace of mind.",
  pillars = [
    {
      icon: "tabler:shield-check",
      title: "Safe",
      description: "Robust safeguarding, infection control, and risk management exceeding CQC standards.",
      cqcEvidence: "Zero serious incidents"
    },
    {
      icon: "tabler:target-arrow",
      title: "Effective",
      description: "Evidence-based care plans delivering measurable improvements in independence and wellbeing.",
      cqcEvidence: "98% goal achievement"
    },
    {
      icon: "tabler:heart-handshake",
      title: "Caring",
      description: "Compassionate staff trained in dignity, privacy, and person-centred support.",
      cqcEvidence: "Outstanding feedback"
    },
    {
      icon: "tabler:list-details",
      title: "Responsive",
      description: "Rapid response to changing needs with flexible, adaptive care packages.",
      cqcEvidence: "24hr escalation protocol"
    },
    {
      icon: "tabler:crown",
      title: "Well-Led",
      description: "Visionary leadership with transparent governance and continuous improvement culture.",
      cqcEvidence: "Staff retention 92%"
    }
  ]
} = Astro.props as Props;
---

<section class="relative py-24 lg:py-32 overflow-hidden bg-background">
  <!-- Sophisticated Background -->
  <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_top,_var(--tw-gradient-stops))] from-primary/5 via-background to-background"></div>
  
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center max-w-3xl mx-auto mb-20">
      <div class="inline-flex items-center rounded-full border border-primary/30 bg-primary/10 px-4 py-1.5 text-xs font-semibold uppercase tracking-wider text-primary mb-6">
        <span class="flex h-1.5 w-1.5 rounded-full bg-primary mr-2"></span>
        CQC Standards
      </div>
      <h2 class="text-4xl lg:text-5xl font-bold tracking-tight text-foreground mb-6">
        {heading}
      </h2>
      <p class="text-xl text-muted-foreground leading-relaxed">
        {subheading}
      </p>
    </div>

    <!-- Corporate Card Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-5">
      {pillars.map((pillar, index) => (
        <div class="group relative flex flex-col bg-card border border-border/60 hover:border-primary/30 rounded-xl p-6 transition-all duration-500 hover:-translate-y-1 overflow-hidden">
          {/* Subtle gradient overlay on hover */}
          <div class="absolute inset-0 bg-gradient-to-br from-primary/[0.03] via-transparent to-accent/[0.03] opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
          
          {/* Top accent */}
          <div class="absolute top-0 left-6 right-6 h-px bg-gradient-to-r from-transparent via-primary/30 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
          
          <!-- Corporate Icon -->
          <div class="relative mb-5">
            <div class="inline-flex items-center justify-center w-11 h-11 rounded-lg bg-primary/10 text-primary ring-1 ring-primary/20 group-hover:bg-primary group-hover:text-primary-foreground group-hover:ring-primary/40 transition-all duration-300">
              <Icon name={pillar.icon} class="w-5 h-5" />
            </div>
          </div>

          <!-- Content -->
          <div class="relative flex-1">
            <h3 class="text-base font-semibold text-foreground mb-2 group-hover:text-primary transition-colors duration-300">
              {pillar.title}
            </h3>
            <p class="text-sm text-muted-foreground leading-relaxed mb-5">
              {pillar.description}
            </p>
          </div>

          <!-- Evidence Badge - Corporate Pill Style -->
          <div class="relative mt-auto pt-4 border-t border-border/40">
            <div class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full bg-primary/10 text-xs font-medium text-primary/90 border border-primary/20">
              <Icon name="tabler:check" class="w-3.5 h-3.5" />
              <span>{pillar.cqcEvidence}</span>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
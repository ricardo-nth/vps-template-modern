---
import Icon from '@components/Icon.astro';
import logoSvg from '@assets/logo.svg';

interface FooterLink {
  label: string;
  href: string;
}

interface Props {
  brandName?: string;
  tagline?: string;
  address?: string;
  phoneLabel?: string;
  phoneHref?: string;
  emailLabel?: string;
  emailHref?: string;
  navLinks?: FooterLink[];
  legalLinks?: FooterLink[];
  socialLinks?: { platform: string; href: string; icon: string }[];
}

const {
  brandName = "Team Care Support",
  tagline = "Person-centred domiciliary care and supported living services across Nottinghamshire. Building independence, not dependence.",
  address = "Foxhall Lodge, Foxhall Road, Forest Fields, Nottingham NG7 6LH",
  phoneLabel = "0115 845 0220",
  phoneHref = "tel:01158450220",
  emailLabel = "help@teamcaresupport.com",
  emailHref = "mailto:help@teamcaresupport.com",
  navLinks = [
    { label: "Supported Living", href: "/supported-living" },
    { label: "Care at Home", href: "/care-at-home" },
    { label: "About Us", href: "/about" },
    { label: "Contact", href: "/contact" },
  ],
  legalLinks = [
    { label: "Quality & Compliance", href: "/quality" },
    { label: "Feedback & Complaints", href: "/feedback" },
    { label: "Privacy Policy", href: "/privacy" },
  ],
  socialLinks = [
    { platform: "Facebook", href: "#", icon: "tabler:brand-facebook" },
    { platform: "Twitter", href: "#", icon: "tabler:brand-x" },
    { platform: "LinkedIn", href: "#", icon: "tabler:brand-linkedin" },
    { platform: "Instagram", href: "#", icon: "tabler:brand-instagram" },
  ],
} = Astro.props as Props;

const currentYear = new Date().getFullYear();
---

<footer class="bg-card border-t border-border">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-16 pb-8">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-10 gap-12 mb-16">
      <!-- Brand Column -->
      <div class="lg:col-span-4 space-y-6">
        <a href="/" class="flex items-center gap-3 group">
          <img src={logoSvg.src} alt="Team Care Support" class="h-12 w-auto" />
        </a>
        <p class="text-muted-foreground leading-relaxed max-w-sm">
          {tagline}
        </p>
        <div class="flex gap-4">
          {socialLinks.map((social) => (
            <a
              href={social.href}
              class="h-10 w-10 rounded-full bg-muted flex items-center justify-center text-muted-foreground hover:bg-primary hover:text-primary-foreground transition-all duration-300"
              aria-label={`Follow us on ${social.platform}`}
            >
              <Icon
                name={social.icon}
                size="20"
                class="h-5 w-5"
                aria-hidden={true}
              />
            </a>
          ))}
        </div>
      </div>

      <!-- Quick Links -->
      <div class="lg:col-span-3">
        <h3 class="font-semibold text-foreground mb-6">Quick Links</h3>
        <ul class="space-y-4">
          {navLinks.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-muted-foreground hover:text-primary transition-colors"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact Info -->
      <div class="lg:col-span-3">
        <h3 class="font-semibold text-foreground mb-6">Contact Us</h3>
        <ul class="space-y-4">
          <li class="flex items-start gap-3 text-muted-foreground">
            <Icon name="tabler:map-pin" class="h-6 w-6 text-primary shrink-0" />
            <span>{address}</span>
          </li>
          <li>
            <a href={phoneHref} class="flex items-center gap-3 text-muted-foreground hover:text-primary transition-colors">
              <Icon name="tabler:phone" class="h-6 w-6 text-primary shrink-0" />
              {phoneLabel}
            </a>
          </li>
          <li>
            <a href={emailHref} class="flex items-center gap-3 text-muted-foreground hover:text-primary transition-colors">
              <Icon name="tabler:mail" class="h-6 w-6 text-primary shrink-0" />
              {emailLabel}
            </a>
          </li>
        </ul>
      </div>

    </div>

    <!-- Bottom Bar -->
    <div class="pt-8 border-t border-border flex flex-col md:flex-row justify-between items-center gap-4">
      <p class="text-sm text-muted-foreground">
        &copy; {currentYear} {brandName}. All rights reserved.
      </p>
      <ul class="flex flex-wrap justify-center gap-6 text-sm text-muted-foreground">
        {legalLinks.map((link) => (
          <li>
            <a href={link.href} class="hover:text-foreground transition-colors">
              {link.label}
            </a>
          </li>
        ))}
      </ul>
    </div>
  </div>
</footer>
